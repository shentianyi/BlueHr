@using MvcPaging
@model IPagedList<BlueHrLib.Data.Recruit>
@using BlueHrWeb.Helpers.View
@{
    ViewBag.Title = "招聘管理";
}
@{
    bool canCreate = MenuAuthHelper.CanShow("Recruit", "Create");
    bool canEdit = MenuAuthHelper.CanShow("Recruit", "Edit");
    bool canDelete = MenuAuthHelper.CanShow("Recruit", "Delete");
}
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>人事信息管理</li>
    <li>
        <strong>招聘需求</strong>
    </li>
</ol>
<hr class="hr-grey" />
<div class="search">
    <form action="/Recruit/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-3 col-md-3 col-sm-6 ol-xs-12">
                <div class="marco-igroup-primary">
                    <span>招聘需求</span>
                    <input type="text" name="requirement" id="Recruitment" placeholder="招聘需求" value="@ViewBag.Query.requirement" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 ol-xs-12">
                <div class="marco-igroup-primary">
                    <span>招聘公司</span>
                    @Html.DropDownList("companyId", ViewData["companyList"] as IEnumerable<SelectListItem>)
                    <!--<input type="text" name="companyId" id="companyId" placeholder="招聘公司" value="@ViewBag.Query.companyId" />-->
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 ol-xs-12">
                <div class="marco-igroup-primary">
                    <span>招聘部门</span>
                    @Html.DropDownList("Department", ViewData["departmentList"] as IEnumerable<SelectListItem>)
                    <!--<input type="text" name="departmentId" id="Department" placeholder="招聘部门" value="@ViewBag.Query.departmentId" />-->
                </div>
            </div>
            <!--<div class="col-lg-4 col-md-4 col-sm-6 ol-xs-12">
                <div class="marco-igroup-primary">
                    <span>需求人数</span>
                    <input type="text" name="amount" id="RecruitNum" placeholder="需求人数" value="@ViewBag.Query.amount" />
                </div>
            </div>-->
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" style="margin-top: 5px;">
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                    <button type="submit" class="marco-btn-success pull-right">
                        <i class="fa fa-search"></i>
                        <span>搜索</span>
                    </button>
                </div>
                
            </div>
        </div>
    </form>
</div>

<hr class="hr-primary" />

<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        @if (canCreate)
        {
        <a href="/Recruit/Create" class="pull-right" style="margin-top: -10px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>
        }
        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#all_Recruitment" role="tab" data-toggle="tab">所有需求</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane  active" id="all_Recruitment">
                <div id="all_Recruitment_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>招聘需求</th>
                            <th>所属公司</th>
                            <th>所属部门</th>
                            <th>需求人数</th>
                            <th>申请日期</th>
                            <th>用工日期</th>
                            <th>申请人</th>
                            <th>流程状态</th>
                            <th>审核记录</th>
                            <!-- <th>流程查看</th> -->
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.requirement)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.companyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.departmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.amount)
                                    </td>
                                    <td>
                                        <span>@(@item.createAt.HasValue?@item.createAt.Value.ToString("yyyy-MM-dd"):"")</span>
                                    </td>
                                    <td>
                                        @(@item.requirementAt.HasValue?@item.requirementAt.Value.ToString("yyyy-MM-dd"):"")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.requirementMan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.auditRecord)
                                    </td>
                                    <!-- <td>
                                        @Html.DisplayFor(modelItem => item.auditView)
                                    </td> -->
                                    <td>
                                        @if (canDelete)
                                        {
                                        <a href="/Recruit/Delete/@item.id" class="option-icon-primary" title="详情">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        }
                                        @if (canEdit)
                                        {
                                        <a href="/Recruit/Edit/@item.id" class="option-icon-warning" title="编辑">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
 
<script type="text/javascript">
    Layout.init();
    var TableWidth = $(window).width() -300;
    if($.cookie("left_sidebar")=="true"){
        TableWidth = $(window).width() - 110;
    }
    
    $(window).resize(function () {
        Layout.TransferTableToGrid(TableWidth, $(window).height() - 250, false, "all_Recruitment", "所有需求列表", "20", "all_Recruitment_grid_table");
    })

    Layout.TransferTableToGrid(TableWidth, $(window).height() - 250, false, "all_Recruitment", "所有需求列表", "20", "all_Recruitment_grid_table");

