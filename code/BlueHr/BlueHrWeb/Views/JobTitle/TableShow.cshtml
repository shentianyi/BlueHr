@using MvcPaging
@model IPagedList<BlueHrLib.Data.JobTitle>
@using BlueHrWeb.Helpers.View
@{
    ViewBag.Title = "职位管理";
}
@{
    bool canCreate = MenuAuthHelper.CanShow("JobTitle", "Create");
    bool canEdit = MenuAuthHelper.CanShow("JobTitle", "Edit");
    bool canDelete = MenuAuthHelper.CanShow("JobTitle", "Delete");
}
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>基础信息管理</li>
    <li>
        <strong>职位管理</strong>
    </li>
</ol>

<hr class="hr-grey" />

<div class="row" style="margin:5px;">
    <form action="/JobTitle/Search" method="get">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="marco-igroup-primary">
                <span>职位名称</span>
                <input type="text" name="Name" id="Name" placeholder="职位名称" value="@ViewBag.Query.Name" />
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
            <button type="submit" class="marco-btn-success">
                <i class="glyphicon glyphicon-search"></i>
                搜索
            </button>
        </div>
    </form>
</div>

<div style="margin:20px;">
    <div class="minitor-show marco-tabs-default">

        @if (canCreate)
        {
            <a href="/JobTitle/Create" class="pull-right" style="margin-top: -10px;">
                <button class="marco-btn-primary">
                    <i class="glyphicon glyphicon-plus-sign"></i>
                    <span>创建</span>
                </button>
            </a>
        }

        <ul class="nav nav-tabs" role="tablist" style="width: 600px;">
            <li role="presentation" class="active"><a href="#on_job" role="tab" data-toggle="tab">当前职位</a></li>
            <li role="presentation"><a href="#off_job" role="tab" data-toggle="tab">历史职位</a></li>
            <li role="presentation"><a href="#all_job" role="tab" data-toggle="tab">全部职位</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="on_job">
                <div calss="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="on_job_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>职位名称</th>
                            <th>必须证照</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (!item.IsRevoked.Value)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            <span>@item.CertificateTypeStr</span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.remark)
                                        </td>
                                        <td>
                                            @if (canDelete)
                                            {
                                                <a href="/JobTitle/Delete/@item.id" class="option-icon-primary" title="详情">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            }
                                            @if (canEdit)
                                            {
                                                <a href="/JobTitle/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>
                </table>
            </div>

            <div role="tabpanel" class="tab-pane" id="off_job">
                <div calss="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="off_job_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>职位名称</th>
                            <th>必须证照</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.IsRevoked.Value)
                                {

                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            <span>@item.CertificateTypeStr</span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.remark)
                                        </td>
                                        <td>
                                            @if (canDelete)
                                            {
                                                <a href="/JobTitle/Delete/@item.id" class="option-icon-primary" title="详情">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            }

                                            @if (canEdit)
                                            {
                                                <a href="/JobTitle/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>
                </table>
            </div>

            <div role="tabpanel" class="tab-pane" id="all_job">
                <div calss="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="all_job_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>职位名称</th>
                            <th>必须证照</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        <span>@item.CertificateTypeStr</span>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.remark)
                                    </td>
                                    <td>
                                        @if (canDelete)
                                        {
                                            <a href="/JobTitle/Delete/@item.id" class="option-icon-primary" title="详情">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        }

                                        @if (canEdit)
                                        {
                                            <a href="/JobTitle/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 100, $(window).height() - 180, false, "on_job", "当前职位列表", "20", "on_job_grid_table");
        Layout.TransferTableToGrid($(window).width() - 100, $(window).height() - 180, false, "off_job", "历史职位列表", "20", "off_job_grid_table");
        Layout.TransferTableToGrid($(window).width() - 100, $(window).height() - 180, false, "all_job", "所有职位列表", "20", "all_job_grid_table");
    })

    Layout.TransferTableToGrid($(window).width() - 100, $(window).height() - 180, false, "on_job", "当前职位列表", "20", "on_job_grid_table");


    $('#off_job').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 100, $(window).height() - 180, true, "off_job", "历史职位列表", "20", "off_job_grid_table");
    $('#off_job').removeClass("active");

    $('#all_job').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 100, $(window).height() - 180, false, "all_job", "所有职位列表", "20", "all_job_grid_table");
    //Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_job", "历史职位列表", "20", "all_job_grid_table");
    $('#all_job').removeClass("active");
</script>
