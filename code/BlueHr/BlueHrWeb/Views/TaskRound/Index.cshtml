@using MvcPaging

@model IPagedList<BlueHrLib.Data.TaskRound>

@{
    ViewBag.Title = "系统任务";
}

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>系统任务</li>
</ol>

<hr class="hr-grey" />

<div style="margin:10px;">
    <div class="marco-tabs-default">       
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#" role="tab" data-toggle="tab">系统任务列表</a></li>
        </ul>

        <div class="tab-content">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="all_sys_type">
                <div id="all_sys_type_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>任务类型</th>
                            <th>开始时间</th>
                            <th>状态</th>
                            <th>结束时间</th>
                            <th>信息</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(i += 1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.typeDisplay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.createdAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.statusDisplay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.finishAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.result)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    Layout.init();

    var TableWidth = $(window).width() - 300;
    if($.cookie('left_sidebar')=="true"){
        TableWidth = $(window).width() - 110;
    }
    
    Layout.TransferTableToGrid(TableWidth, $(window).height() - 180, false, "all_sys_type", "系统任务列表", "20", "all_sys_type_grid_table");
</script>
