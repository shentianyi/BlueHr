@using MvcPaging

@model IPagedList<BlueHrLib.Data.TaskRound>

@{
    ViewBag.Title = "系统任务列表";
}

@Styles.Render("~/Content/company")

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>系统任务列表</li>
</ol>

<hr class="hr-grey" />

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="usual-table">
       
        <div class="table-body content_3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>&nbsp;</th>
                        <th>任务类型</th>
                        <th>开始时间</th>
                        <th>状态</th>
                        <th>结束时间</th>
                        <th>信息</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
            {
                    int i=0;
                foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @(i+=1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.typeDisplay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.createdAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.statusDisplay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.finishAt)
                                </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.result)
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center;">
        <div class="clearfix pagination">
            <div class="pagination-inner">
                @if (Model != null)
                {
                    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                 }
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    Layout.init();
    Layout.TbodyHeight('.table-body', 310);
</script>