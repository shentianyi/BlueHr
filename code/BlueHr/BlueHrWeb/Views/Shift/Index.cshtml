@using MvcPaging
@using BlueHrWeb.Helpers.View

@model IPagedList<BlueHrLib.Data.Shift>
@{
    ViewBag.Title = "班次管理";
}
@*@Styles.Render("~/Content/degreetype")*@
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>考勤管理</li>
    <li>
        <strong>班次管理</strong>
    </li>
</ol>
<hr class="hr-grey" />
@{
    bool canDelete = MenuAuthHelper.CanShow("Shift", "Delete");
    bool canEdit = MenuAuthHelper.CanShow("Shift", "Edit");
    bool canCreate = MenuAuthHelper.CanShow("Shift", "Create");
}
<div class="search">
    @* 简单搜索 *@
    <form action="/Shift/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>班次名称</span>
                    <input type="text" name="Name" id="Name" placeholder="班次名称" value="@ViewBag.Query.Name" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" style="margin-top: 5px;">
                    <button type="submit" class="marco-btn-success pull-left" style="margin-right: 5px;">
                        <i class="fa fa-search"></i>
                        <span>搜索</span>
                    </button>
                    <button type="button" class="marco-btn-primary advanced-filter-btn" title="自定义搜索">
                        <i class="fa fa-filter"></i>
                        <span>自定义搜索</span>
                    </button>
            </div>
        </div>
    </form>
</div>
 @* 自定义搜索 *@
<div id="search_content" class="import_content" style="display:none;">
       <form action="/Shift/AdvancedSearch" method="post">
            <div class="dialogModal_header" style="background:steelblue; color:white;">
                自定义搜索信息
            </div>
            <div class="dialogModal_body itm" style="margin:8px;">
                <div class="row cln">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="marco-igroup-primary">
                            <span>字段</span>
                            @Html.DropDownList("allTableName", ViewData["getAllTableNameList"] as IEnumerable<SelectListItem>)
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="marco-igroup-primary">
                            <span>条件</span>
                            @Html.DropDownList("searchConditions", ViewData["searchConditionsList"] as IEnumerable<SelectListItem>)
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="marco-igroup-primary">
                            <span>值</span>
                            <input type="text" name="searchValueFirst" value="@ViewBag.searchValueFirst" />
                        </div>
                    </div>
                </div>   
            </div>
            <div class="dialogModal_footer row" style="margin: 0;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" class="marco-btn-success pull-right">
                        <i class="fa fa-search"></i>
                        <span>搜索</span>
                    </button>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <button class="marco-btn-primary pull-right" title="点击删除字段" type="button" onclick="deleteCondition()">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="marco-btn-primary pull-right" title="点击添加字段" type="button" onclick="addCondition()">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div> 
        </form>
</div>
<hr class="hr-primary" />

<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        <a href="/Shift/Create" class="pull-right" style="margin-top: -10px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>
        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#all_shift" role="tab" data-toggle="tab">所有班次管理</a></li>           
        </ul>
        <div class="tab-content">
           
            <div role="tabpanel" class="tab-pane  active" id="all_shift">
                <div id="all_shift_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>代码</th>
                            <th>开始时间</th>
                            <th>班次类型</th>
                            <th>截止时间</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.code)
                                    </td>
                                    <td>
                                        @{
                                            string startAtStr = string.Format("{0:hh\\:mm}", item.startAt);
                                        }
                                        @Html.DisplayFor(modelItem => startAtStr)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.shiftTypeStr)
                                    </td>
                                    <td>
                                        @{
                                            string endAtStr = string.Format("{0:hh\\:mm}", item.endAt);
                                        }
                                        @Html.DisplayFor(modelItem => endAtStr)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.remark)
                                    </td>
                                    <td>
                                        @if (canDelete)
                                        {
                                            <a href="/Shift/Delete/@item.id" class="option-icon-primary" title="详情">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        }
                                        @if (canEdit)
                                        {
                                            <a href="/Shift/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        }
                                    </td>
                              </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div> 


<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_shift", "所有班次管理列表", "20", "all_shift_grid_table");

    })

    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_shift", "所有班次管理列表", "20", "all_shift_grid_table");
    Layout.advancedfilter();

    //弹出框
    $('.advanced-filter-btn').click(function () {
        $('#search_content').dialogModal({
            onOkBut: function () {
            },
            onCancelBut: function () { },
            onLoad: function () {
            },
            onClose: function () {
            }
        });
    });

    function addCondition(){
        if($(".itm .cln").length<5){
            $(".cln:last").after($('.cln:last').clone(true));
        }   
    }
    
    function deleteCondition(){
        if($(".itm .cln").length<=2){

        }else{
            $(".cln:last").remove();
        }
    }
</script>