@model BlueHrLib.Data.Shift

<div id="shift" style="margin:10px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("班次管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody row">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>名称 </span>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.name)
                        }
                        else
                        {
                            <input type="text" name="name" placeholder="名称" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>代码 </span>

                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.code)
                        }
                        else
                        {
                            <input type="text" name="code" placeholder="代码" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>开始时间 </span>
                        @*<input type="text" name="CalDate" id="CalDate" class="current-datetimepicker" placeholder="考勤时间" value="@DateTime.Now.ToString("yyyy-MM-dd hh:00")" />*@
                        @Html.EditorFor(model => model.startAt, new { htmlAttributes = new { @class = "datetimepicker" } })
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>开始时间 </span>
                        @Html.EditorFor(model => model.endAt, new { htmlAttributes = new { @class = "datetimepicker" } })
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>班次类型 </span>
                        @Html.DropDownList("shiftType", ViewData["shiftTypeList"] as IEnumerable<SelectListItem>)
                    </div>
                </div>

            </div>


            <div class="marco-textarea">
                <label for="remark">备注</label>
                @if (Model != null)
                {
                    @Html.TextAreaFor(model => model.remark)
                }
                else
                {
                    <textarea name="remark" placeholder="备注"></textarea>
                }
            </div>
        </div>

    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    $('.datetimepicker').datetimepicker({
        format: 'H:i:s',
        defaultTime: '00:00:00'
    });

    //$('.current-datetimepicker').datetimepicker({
    //    format: 'Y-m-d H:i'
    //});

    //Layout.datepicker('.datetimepicker');
    //Layout.datepicker('.date-picker');
</script>
