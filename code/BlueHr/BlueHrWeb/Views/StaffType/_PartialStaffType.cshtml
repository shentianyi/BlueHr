@model BlueHrLib.Data.StaffType
@using BlueHrWeb.Helpers.View

@{
    bool canDelete = MenuAuthHelper.CanShow("StaffType", "Delete");
}

<input type="hidden" id="can" value="@canDelete.ToString()">

<div id="stafftype" style="margin:20px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("人员类型管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "Success" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody">
                <div class="marco-igroup-primary">
                    <label for="name">人员类型名称*</label>
                    @if (Model != null)
                    {
                        @Html.EditorFor(model => model.name)
                    }
                    else
                    {
                        <input type="text" name="name" placeholder="人员类型名称" />
                    }
                </div>

                <div class="marco-textarea">
                    <label for="remark">备注</label>
                    @if (Model != null)
                {
                        @Html.TextAreaFor(model => model.remark)
                    }
                    else
                    {
                        <textarea name="remark" placeholder="备注"></textarea>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });


</script>
