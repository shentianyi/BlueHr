@using MvcPaging
@using BlueHrWeb.Helpers.View

@model IPagedList<BlueHrLib.Data.ShiftSchedule>
@{
    ViewBag.Title = "排班查询";
}

<style type="text/css">
    .popModal{
        border-radius: 0;
        background: #34495e;
        border:none;
        z-index: 9999;
    }

    .popModal.bottomLeft:after, .popModal.bottomRight:after, .popModal.bottomCenter:after{
        border-bottom-color: #34495e;
    }

    .dialogModal .dialogModal_container{
        max-width: initial;
    }
</style>

@Styles.Render("~/Content/multi-select")

@Scripts.Render("~/bundles/fullcalendar")
@Scripts.Render("~/bundles/multi-select")

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>考勤管理</li>
    <li>
        <strong>排班查询</strong>
    </li>
</ol>
<hr class="hr-grey" />
@{
    bool canDelete = MenuAuthHelper.CanShow("ShiftSchedule", "Delete");
    bool canEdit = MenuAuthHelper.CanShow("ShiftSchedule", "Edit");
    bool canCreate = MenuAuthHelper.CanShow("ShiftSchedule", "Create");
    bool canImport = MenuAuthHelper.CanShow("ShiftSchedule", "Import");
}

<div style="position:absolute; z-index:6; padding: 0 30px;"><div id="shift_schedule_calendar"></div></div>

<!--新建排班弹出框内容-->
<div id="NewShiftScheduleModal" class="new_shift_schedule_content" style="display:none;">
    <div class="dialogModal_header" style="background:steelblue;color:white;">
        <span>新建排班</span>
    </div>
    

    <div class="dialogModal_content">
        <div class="marco-nbody">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="marco-igroup-primary">
                        <span>选择班次</span>
                        @Html.DropDownList("shiftId", ViewData["shiftsList"] as IEnumerable<SelectListItem>)
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="marco-igroup-primary">
                        <span>选择时间段</span>
                        <input type="text" class="date-picker" id="startTime">
                        <span>~</span>
                        <input type="text" class="date-picker" id="endTime">
                    </div>
                </div>
            </div>
            
            <hr class="hr-primary" />

            <div class="row" style="margin: 0;">
                <span style="color: #31708f;">选择要排班员工</span>
                <button class="marco-btn-primary" id="select_all_staff">全选</button>
                <button class="marco-btn-primary" id="deselect_all_staff">全不选</button>

                <br />

                <!--所有员工显示列表-->
                <select name="allStaff" id="allStaff" multiple='multiple'>

                </select>
            </div>
        </div>
    </div>

    <div class="dialogModal_footer">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">
            <button type="button" class="marco-btn-primary pull-right" data-dialogmodalbut="ok">
                确认
            </button>
        </div>
    </div>
</div>

<button id="createBtn" class="marco-btn-primary" style="position:absolute; top: 60px; right: 100px;">
    <i class="fa fa-plus"></i>
    新建排班
</button>
<button class="marco-btn-primary import-button-dialog" title="Import" type="button" style="position:absolute; top: 60px; right: 20px;">
    导入排班
</button>

<div id="ShiftScheduleModal" class="approval_content" style="display:none;">
    <div class="dialogModal_header" style="background:steelblue;color:white;">
        <span>排班详情</span>
    </div>

    <div class="dialogModal_content">
        <div class="marco-nbody row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <span>班次信息</span>
                <span id="shift_schedule_name" name = "shift_schedule_name" style="font-weight: bold; color: #2980b9;"> </span>
            </div>
            <br />
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="max-height: 490px; overflow:auto;">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>员工号</th>
                            <th>名称</th>
                            <th>代码</th>
                            <th>开始</th>
                            <th>结束</th>
                            <th>排班日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="shift_schedule_tbody">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!--导入数据-->
<div id="dialog_content" class="import_content" style="display:none;">
    <div class="dialogModal_header" style="background:steelblue;color:white;">
        导入排班数据
    </div>
    <div class="dialogModal_content">
        <strong>选择数据文件:</strong>
        <hr />
        <input class="item-data-uploader" type="file" name="files[]" data-url="/ShiftSchedule/Import" />
        <div class="item-data-uploader-preview" style="display:none;"></div>
        <hr />
        <a href="~/Template/排班导入文件模板.xlsx" target="_blank">下载文件模板</a>
    </div>

</div>
<script type="text/javascript">
    Layout.init();
    $("#shift_schedule_calendar").parent().css({"width" : $(window).width() - 250 + 'px', "min-height": $(window).height()+'px'});

    $(window).resize(function () {
        $("#shift_schedule_calendar").parent().css({ "width": $(window).width() - 250 + 'px' });
    });

    Layout.rangedatepicker('#ScheduleAtFrom', '#ScheduleAtEnd');

    $('.import-button-dialog').click(function () {
        $('#dialog_content').dialogModal({
            onOkBut: function () {
            },
            onCancelBut: function () { },
            onLoad: function () {
                data_upload(".item-data-uploader");
            },
            onClose: function () {
                window.location.reload();
            }
        });
    });
    $.ajax({
        url:'/ShiftSchedule/GetAllShiftSchedule',
        type:'get',
        success:function(data){
            $('#shift_schedule_calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month, agendaWeek, agendaDay, listMonth, listWeek, listDay'
                },
                views: {
                    listDay: { buttonText: '天列表' },
                    listWeek: { buttonText: '周列表' },
                    listMonth: { buttonText: '月列表' }
                },
                // weekends:false,
                defaultDate: new Date(),
                firstDay:1,
                locale: 'zh-cn',
                editable: false,
                timeFormat: 'H:mm',
                axisFormat: 'H:mm',
                weekNumbers: true,
                weekNumbersWithinDays: true,
                selectable: false,
                // selectHelper: false,
                // select: function(start, end) {
                //     var eventData; 
                //     $('#person_calendar').fullCalendar('renderEvent', eventData, true); // stick? = true
                    
                //     $('#person_calendar').fullCalendar('unselect');
                // },
                dayClick: function(date, allDay, jsEvent, view){
                    // console.log(view);
                },
                eventClick: function(event, jsEvent, view) {
                    var EventChildrens = event.childrens;

                    $("#shift_schedule_tbody").empty();

                    $("#shift_schedule_name").html(event.id.split("_")[0]+" "+event.id.split("_")[1].split(" ")[1]+" - "+event.id.split("_")[2]+" 共:"+event.id.split("_")[3]+"人");

                    for(var i = 0; i < event.childrens.length; i++){
                    // $("<tr><td> <input id="+event.childrens[i].id+" type='checkbox' name='shift_schedule_checkbox' style='width: 18px; height: 16px;' /> </td><td>"+event.childrens[i].staffNr+" <a href='/Staff/Delete/"+event.childrens[i].staffNr+"' class='option-icon-primary' title='员工详情' >
                        $("<tr><td>"+event.childrens[i].staffNr+" <a href='/Staff/Delete/"+event.childrens[i].staffNr+"' class='option-icon-primary' title='员工详情' > <i class='fa fa-eye'></i> </a> </td><td>"+event.childrens[i].name+"</td><td>"+event.childrens[i].code+"</td>"+
                        "<td>"+event.childrens[i].start+"</td>"+
                        "<td>"+event.childrens[i].end+"</td><td>"+event.childrens[i].scheduleAt+"</td>"+
                        "<td>"+
                        // "<a href='/ShiftSchedule/Edit/"+event.childrens[i].id+"' class='option-icon-primary' title='编辑该员工排班'>"+
                        // "<i class='fa fa-pencil'></i></a>"+
                        "<a class='option-icon-danger'><i class='fa fa-trash' id='delete_shift_schedule' "+
                        " shift_scheduleId = " + event.childrens[i].id + " title='删除该员工排班'></i></a></td>"+
                        "</tr>").appendTo($("#shift_schedule_tbody"));
                    }
                    
                    $("#ShiftScheduleModal").dialogModal({
                        onOkBut: function () {
                        },
                        onCancelBut: function () { 
                        },
                        onLoad: function () {
                            $(".dialogModal").find('.option-icon-primary').click(function(){
                                //pageURL, height, width, top, left, toolbar, menubar, scrollbars, resizable, location, status, alwaysRaised, zLook
                                Layout.openNewWindow($(this).attr("href"), $(window).height()-100,$(window).width()-200, 50, 100, 'no', 'no', 'no', 'yes', 'no', 'no', 'no', 'yes');
                                return false;
                            });

                            $(".dialogModal").on('click', '#shif_schedule_check_all', function() {
                                var IsChecked = this.checked;
                                
                                $(".dialogModal").find('input[name="shift_schedule_checkbox"]').each(function(){
                                    $(this).attr("checked", IsChecked)
                                });   
                            });
                                    
                            // var $subBox = $(".dialogModal").find("input[name='shift_schedule_checkbox']");
                            // $subBox.click(function(){
                            //     $(".dialogModal").find("#shif_schedule_check_all").attr("checked",$subBox.length == $(".dialogModal").find("input[name='shift_schedule_checkbox']:checked").length ? true : false);
                            // });

                            $(".dialogModal").find("#delete_shift_schedule").click(function(){
                                var This = $(this);
                                if(confirm("确认删除？")){
                                    $.ajax({
                                        url:'/ShiftSchedule/DeleteSchedule',
                                        type:'post',
                                        data:{
                                            id: $(".dialogModal").find("#delete_shift_schedule").attr("shift_scheduleId")
                                        },
                                        success:function(data){
                                            if(data.Success){
                                                $(".dialogModal").find("#shift_schedule_name").html(event.id.split("_")[0]+" "+event.id.split("_")[1].split(" ")[1]+" - "+event.id.split("_")[2]+" 共:"+ (event.id.split("_")[3] - 1) +"人");
                                                
                                                This.parent().parent().parent().fadeOut();

                                                // console.log(EventChildrens);
                                                // console.log(EventChildrens.length);
                                                // console.log(typeof(EventChildrens));
                                                // EventChildrens.remove(0);

                                                // $('#shift_schedule_calendar').fullCalendar('removeEvents', [$(".dialogModal").find("#delete_shift_schedule").attr("shift_scheduleId")]);
                                            }
                                        },
                                        error:function(){
                                            Layout.popMsg("popMsg-danger", "删除失败");
                                        }
                                    })
                                }
                            });
                        },
                        onClose: function () {
                        }
                    });
                },
                eventMouseover:function(event, jsEvent, view){
                    // console.log(event);
                    // console.log(event.start);
                    // console.log(event.title);
                    // console.log(event.start._i);
                },
                events: data
            });
        },
        error:function(){
            console.log("CCVVError");
        }
    })

    //弹出新建排班的新窗口
    $("#createBtn").click(function(){
        $("#NewShiftScheduleModal").dialogModal({
            onOkBut: function () {
                var ShiftID = $(".dialogModal").find("#shiftId").val();
                var StartTime = $(".dialogModal").find("#startTime").val()
                var EndTime = $(".dialogModal").find("#endTime").val()
                var StaffNrs = $(".dialogModal").find("#allStaff").val()
                $.ajax({
                    url:'/ShiftSchedule/MoreEasyCreate',
                    type:'post',
                    data:{
                        shiftId: ShiftID,
                        startTime: StartTime,
                        endTime: EndTime,
                        staffNrs: StaffNrs
                    },
                    success:function(data){
                        if(data.Success){
                            window.location.reload();
                        }
                    },
                    error:function(){
                        return false;
                    }
                })
            },

            onCancelBut: function () { 

            },

            onLoad: function () {
                Layout.datepicker(".date-picker");
                //初始化选择框
                $(".dialogModal").find('#allStaff').multiSelect({ 
                    selectableOptgroup: true,
                    selectableHeader: "<input type='text' class='search-input' autocomplete='off' placeholder='搜索：工号、姓名'>",
                    selectionHeader: "<input type='text' class='search-input' autocomplete='off' placeholder='搜索：工号、姓名'>",
                    afterInit: function(ms){
                        var that = this,
                            $selectableSearch = that.$selectableUl.prev(),
                            $selectionSearch = that.$selectionUl.prev(),
                            selectableSearchString = '#' + that.$container.attr('id')+' .ms-elem-selectable:not(.ms-selected)',
                            selectionSearchString = '#' + that.$container.attr('id')+' .ms-elem-selection.ms-selected';

                        that.qs1 = $selectableSearch.quicksearch(selectableSearchString)
                        .on('keydown', function(e){
                        if (e.which === 40){
                            that.$selectableUl.focus();
                            return false;
                        }
                    });

                        that.qs2 = $selectionSearch.quicksearch(selectionSearchString)
                        .on('keydown', function(e){
                            if (e.which == 40){
                                that.$selectionUl.focus();
                                return false;
                            }
                        });
                    },
                    afterSelect: function(values){
                        // console.log(values);
                    }
                });

                //全选按钮点击事件
                $(".dialogModal").find('#select_all_staff').click(function(){
                    $(".dialogModal").find('#allStaff').multiSelect('select_all');
                    return false;
                });
                //全不选按钮点击事件
                $(".dialogModal").find('#deselect_all_staff').click(function(){
                    $(".dialogModal").find('#allStaff').multiSelect('deselect_all');
                    return false;
                });
            },
            onClose: function () {
            }
        });
    })

    //异步请求所有员工数据
    $.ajax({
        url:'/ShiftSchedule/GetAllStaff',
        type:'get',
        success:function(data){
            for(var i =0; i<data.length; i++){
                var Html = "<optgroup label="+data[i].label+">";

                for(var staff=0; staff < data[i].childrens.length; staff++){
                    Html += "<option value=" + data[i].childrens[staff].nr + ">" + data[i].childrens[staff].nr + " - " + data[i].childrens[staff].name + " - " + data[i].childrens[staff].department + "</option>";
                }

                Html += "</optgroup>";
                
                $(Html).appendTo($("#allStaff"));
            }
        },
        error:function(){
            console.log("Something Error!");
        }
    })
</script>

