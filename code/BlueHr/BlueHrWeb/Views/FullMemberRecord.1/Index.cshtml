@using MvcPaging
@using BlueHrWeb.Helpers.View

@model IPagedList<BlueHrLib.Data.FullMemberRecord>

@{
    ViewBag.Title = "转正管理";
}

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>劳动关系管理</li>
    <li>转正管理</li>
</ol>

<hr class="hr-grey" />
@{
    bool canDelete = MenuAuthHelper.CanShow("FullMemberRecord", "Delete");
    bool canEdit = MenuAuthHelper.CanShow("FullMemberRecord", "Edit");
    bool canCreate = MenuAuthHelper.CanShow("FullMemberRecord", "Create");

}


<div class="search">
    <form action="/FullMemberRecord/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>工号</span>
                    <input type="text" name="Nr" id="Nr" placeholder="工号" value="@ViewBag.Query.staffNr" />
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
                <button type="submit" class="marco-btn-success">
                    <i class="glyphicon glyphicon-search"></i>
                    搜索
                </button>
            </div>
        </div>
    </form>
</div>
<hr class="hr-primary" />
<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">

        <a href="/FullMemberRecord/Create" class="pull-right" style="margin-top: -10px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>

        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">

            <li role="presentation" class="active"><a href="#all_LeaveRecord" role="tab" data-toggle="tab">转正记录</a></li>

        </ul>
        <div class="tab-content">

            <div role="tabpanel" class="tab-pane  active" id="all_LeaveRecord">
                <div id="all_LeaveRecord_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                <thead>
                    <tr>
                        <th>工号</th>
                        <th>是否通过考核</th>
                        <!--离职原因就是 resignTypeId-->
                        <th>考核分数</th>
                        <th>转正时间</th>
                        <th>转正备注</th>
                        <th>申请人</th>
                        <th>申请时间</th>
                        <th>审批人</th>
                        <th>审批时间</th>
                        <th>审核状态</th>
                        <th>备注</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.staffNr)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isPassCheck)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.checkScore)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.beFullAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.approvalStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.approvalUserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.approvalRemark)
                                </td>
                                <td>
                                    @if (canDelete)
                                    {
                                    <a href="/FullMemberRecord/Delete/@item.id" class="option-icon-primary" title="详情">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    }
                                    @if (canEdit)
                                    {
                                    <a href="/FullMemberRecord/Edit/@item.id" class="option-icon-warning" title="编辑">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/company")

<script type="text/javascript">
    Layout.init();
    //Layout.TbodyHeight('.table-body', 310);
</script>