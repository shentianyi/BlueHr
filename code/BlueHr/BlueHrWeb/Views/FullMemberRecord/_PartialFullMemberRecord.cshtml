@model BlueHrLib.Data.FullMemberRecord

<div id="fullMemberRecord" style="margin:10px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>个人事项</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    <input type="hidden" id="error_info" value="@ViewBag.ErrorMsg" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "post_return_action(data)"/*, OnBegin = "return validate_page_info()"*/ }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary submit-btn" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="marco-igroup-primary">
                            <label for="name">员工号 *</label>
                            @*@Html.EditorFor(model => model.staffNr)*@
                            
                            <!--@Html.DropDownList("onTrialStaff", ViewData["onTrialStaff"] as IEnumerable<SelectListItem>)-->
                            @Html.DropDownList("staffNr", ViewData["onTrialStaff"] as IEnumerable<SelectListItem>)

                            <!--<input type="hidden" id="staffNr" name="staffNr">-->
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="marco-igroup-primary">
                            <label for="name">是否通过转正</label>
                            <input type="checkbox" id="isPassCheck" name="isPassCheck" value="true" checked style="width: 24px; margin-left: 20px;">
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="marco-igroup-primary">
                            <label for="name">转正分数</label>
                            @Html.EditorFor(model => model.checkScore)
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="marco-igroup-primary">
                            <label for="name">转正日期</label>
                            @Html.EditorFor(model => model.beFullAt, new { htmlAttributes = new { @class = "date-picker" } })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="marco-textarea">
                            <span style="padding:3px 10px; height: 35px; margin-bottom: -2px;">备注</span>
                            @Html.TextAreaFor(model => model.remark)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    Layout.datepicker(".date-picker"); 

    $("#isPassCheck").click(function(){

        if($("#isPassCheck").val()=="true"){
            $("#isPassCheck").val("false");
            console.log($("#isPassCheck").val());
        }else{
            $("#isPassCheck").val("true");
            console.log($("#isPassCheck").val());
        }
    })

    $(".submit-btn").click(function(){
        $("#resignTypeName").val($(".combo-input").val());
        // $("#staffNr").val($("#onTrialStaff").val());

        console.log($("#staffNr").val());
        if($("#staffNr").val()==""){
            Layout.popMsg("popMsg-danger", "员工号不能为空");
            return false;
        }
    })

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    if ($("#error_info").val() != "" && $("#error_info").val() != undefined) {
        Layout.popMsg("popMsg-danger", $("#error_info").val());
    }

     //回调函数
    function post_return_action(data) {
        if (!data.Success) {
            Layout.popMsg('popMsg-danger', data.Content);
            return false;
        }
        else {
            window.close();
            //location.href = '/ExtraWorkRecord/Index';
        }
    }

</script>
