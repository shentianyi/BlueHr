            <li role="presentation" class="active"><a href="#inter" role="tab" data-toggle="tab">加班类型列表</a></li>
        </ul>

        <div class="tab-content">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="all_extra_type">
                <div id="all_extra_type_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>备注</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.remark)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    Layout.init();
    var TableWidth = $(window).width() - 300;

    if($.cookie('left_sidebar')=="true"){
        TableWidth  = $(window).width() - 105;
    }

    Layout.TransferTableToGrid(TableWidth, $(window).height() - 180, false, "all_extra_type", "加班类型", "20", "all_extra_type_grid_table");
    
    //resize()：调整浏览器窗口大小的方法
    $(window).resize(function () {
        Layout.TransferTableToGrid(TableWidth, $(window).height() - 180, false, "all_extra_type", "加班类型", "20", "all_extra_type_grid_table");
    })

</script>
