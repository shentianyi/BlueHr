                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.roleStr)
                                    </td>
                                    <td>
                                        <i class="fa fa-unlock"></i>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthCompany)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthDepartment)
                                    </td>
                                    <td>
                                        @if(canDelete)
                                        {
                                            <a href="/User/Delete/@item.id" class="option-icon-primary" title="详情">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        }
                                        @if(canEdit)
                                        {
                                            <a href="/User/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        }
                                        @if(canChangepwd)
