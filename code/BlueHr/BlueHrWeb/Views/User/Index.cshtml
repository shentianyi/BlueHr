@using MvcPaging
@model IPagedList<BlueHrLib.Data.User>
@{
    ViewBag.Title = "用户管理";
}
@*@Styles.Render("~/Content/degreetype")*@
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>权限管理</li>
    <li>
        <strong>用户管理</strong>
    </li>
</ol>

<hr class="hr-grey" />

<div class="search">
    @* 简单搜索 *@
    <form action="/User/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>姓名</span>
                    <input type="text" name="Id" id="Id" value="" placeholder="姓名" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>角色</span>
                    <input type="text" name="Nr" id="Nr" value="" placeholder="角色" />
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" style="margin-top: 5px;">
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                    <button type="submit" class="marco-btn-success pull-left">
                        <i class="fa fa-search"></i>
                        <span>搜索</span>
                    </button>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                    <button type="button" class="marco-btn-primary advanced-filter-btn" title="自定义搜索">
                        <i class="fa fa-filter"></i>
                        <span>自定义搜索</span>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

 @* 自定义搜索 *@
<div id="search_content" class="import_content" style="display:none;">
    <form action="/User/AdvancedSearch" method="post">
        <div class="dialogModal_header" style="background:steelblue; color:white;">
            自定义搜索信息
        </div>
        <div class="advanced-filter row" style="margin:8px;">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>字段</span>
                    @Html.DropDownList("allTableName", ViewData["getAllTableNameList"] as IEnumerable<SelectListItem>)
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>条件</span>
                    @Html.DropDownList("searchConditions", ViewData["searchConditionsList"] as IEnumerable<SelectListItem>)
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>值</span>
                    <input type="text" name="searchValueFirst" value="@ViewBag.searchValueFirst" />
                </div>
            </div>
   
        </div>
        <div class="advanced-filter row" style="margin:8px;position:relative;left:8px;bottom:5px;">
                <span>添加查询条件：</span>
                <select id="params" name="params"><option value="字段">字段</option>
                    <option value="条件1">条件1</option>
                    <option value="条件2">条件2</option>
                    <option value="条件3">条件3</option>
                    <option value="条件4">条件4</option>
                </select>
        </div> 
    </form>
</div>

<hr class="hr-primary" />
<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        <a href="/User/Create" class="pull-right"  style="margin-top: -10px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>
        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#unlocked_user" role="tab" data-toggle="tab">未锁定用户</a></li>
            <li role="presentation"><a href="#locked_user" role="tab" data-toggle="tab">已锁定用户</a></li>
            <li role="presentation"><a href="#all_user" role="tab" data-toggle="tab">所有用户</a></li> 
        </ul>
        <div class="tab-content">
            
            <div role="tabpanel" class="tab-pane" id="locked_user">
                <div id="locked_user_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>姓名</th>
                            <th>邮箱地址</th>
                            <th>角色</th>
                            <th>锁定状态</th>
                            <th>权限公司</th>
                            <th>权限部门</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                if (item.isLocked.Value)
                                {
                                <tr>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.roleStr)
                                    </td>
                                    <td>
                                         <i class="fa fa-lock"></i>
                                       
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthCompany)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthDepartment)
                                    </td>
                                    <td>
                                        <a href="/User/Delete/@item.id" class="option-icon-primary" title="详情">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="/User/Edit/@item.id" class="option-icon-warning" title="编辑">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a href="/User/changepwd?id=@item.id" class="option-icon-danger" title="修改密码">
                                            <i class="fa fa-paste"></i>
                                        </a>
                                        
                                            <a href="#" class="option-icon-danger" title="解锁" onclick="lock(@item.id)">
                                                <i class="fa fa-unlock"></i>
                                            </a>
                                       
                                        
                                    </td>
                                </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane  active" id="unlocked_user">
                <div id="unlocked_user_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>姓名</th>
                            <th>邮箱地址</th>
                            <th>角色</th>
                            <th>锁定状态</th>
                            <th>权限公司</th>
                            <th>权限部门</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                if (!item.isLocked.Value)
                                {
                                <tr>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.roleStr)
                                    </td>
                                    <td>
                                        <i class="fa fa-unlock"></i>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthCompany)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthDepartment)
                                    </td>
                                    <td>
                                        <a href="/User/Delete/@item.id" class="option-icon-primary" title="详情">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="/User/Edit/@item.id" class="option-icon-warning" title="编辑">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a href="/User/changepwd?id=@item.id" class="option-icon-danger" title="修改密码">
                                            <i class="fa fa-paste"></i>
                                        </a>
                                    
                                        <a href="#" class="option-icon-danger" title="锁定" onclick="lock(@item.id)">
                                            <i class="fa fa-lock"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane" id="all_user">
                <div id="all_user_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>姓名</th>
                            <th>邮箱地址</th>
                            <th>角色</th>
                            <th>锁定状态</th>
                            <th>权限公司</th>
                            <th>权限部门</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.roleStr)
                                    </td>
                                    <td>
                                        @if (item.isLocked.Value)
                                        {
                                            <i class="fa fa-lock"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-unlock"></i>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthCompany)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AuthDepartment)
                                    </td>
                                    <td>
                                        <a href="/User/Delete/@item.id" class="option-icon-primary" title="详情">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="/User/Edit/@item.id" class="option-icon-warning" title="编辑">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a href="/User/changepwd?id=@item.id" class="option-icon-danger" title="修改密码">
                                            <i class="fa fa-paste"></i>
                                        </a>
                                        @if (item.isLocked.Value)
                                        {
                                            <a href="#" class="option-icon-danger" title="解锁" onclick="lock(@item.id)">
                                                <i class="fa fa-unlock"></i>
                                            </a>
                                        }
                                        else
                                        {

                                            <a href="#" class="option-icon-danger" title="锁定" onclick="lock(@item.id)">
                                                <i class="fa fa-lock"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 

