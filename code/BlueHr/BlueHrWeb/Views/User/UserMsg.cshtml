@using MvcPaging
@model IPagedList<BlueHrLib.Data.User>
@{
    ViewBag.Title = "个人信息";
}
@*@Styles.Render("~/Content/degreetype")*@
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>个人信息</li>
</ol>


<hr class="hr-grey" />

<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            
            <li role="presentation" class="active"><a href="#all_usermsg" role="tab" data-toggle="tab">个人信息</a></li>
            
        </ul>
        <div class="tab-content">
            
            <div role="tabpanel" class="tab-pane active" id="all_usermsg">
                <div id="all_usermsg_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>电子邮箱</th>
                            <th>是否锁定</th>
                            <th>角色类型</th>
                        </tr>
                    </thead>

                    <tbody id="UserMessages">
                        

                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                if (item.isLocked.Value)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.roleStr)
                                        </td>
                                        <td>
                                            <i class="fa fa-lock"></i>

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AuthCompany)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AuthDepartment)
                                        </td>
                                        @*<td>
                                                <a href="/User/Delete/@item.id" class="option-icon-primary" title="详情">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="/User/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a href="/User/changepwd?id=@item.id" class="option-icon-danger" title="修改密码">
                                                    <i class="fa fa-paste"></i>
                                                </a>

                                                <a href="#" class="option-icon-danger" title="解锁" onclick="lock(@item.id)">
                                                    <i class="fa fa-unlock"></i>
                                                </a>
                                            </td>*@
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
           
        </div>
        

    </div>

</div>
<style>
    .input_kuang {
        background: #fff;
        border: 1px solid #999;
    }

    .input_kuang {
        width: 70%;
    }
</style>

@*@Scripts.Render("~/bundles/degreetype")*@
<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "user_msg", "基本信息", "20", "user_msg_grid_table");
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "user_detailmsg", "详细信息", "20", "user_detailmsg_grid_table");
    })

    Layout.advancedfilter();

    $.ajax({
        url: '/User/UserDetail',
        type: 'get',
        success: function (data) {
            console.log(data);
            $("#UserMessages").empty();
            if(data.length>0){
                for (var i = 0; i < data.length; i++) {
                    var Html = "<tr><td > " + data[i].用户名 + " </td><td > " + data[i].电子邮箱 + " </td><td > ";
                    $(Html).appendTo($("#UserMessages"));
                }
            }
            
        },
        error: function () {
            console.log("CCCCCCCC");
        }
    });


    
</script>