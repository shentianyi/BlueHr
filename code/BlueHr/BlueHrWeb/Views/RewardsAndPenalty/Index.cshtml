            </div>
            
            
        </div>
    </div>
</div>

 

<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_Rewards", "奖励记录列表", "20", "all_Rewards_grid_table");
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_Penalties", "离职员工列表", "20", "all_Penalties_grid_table");
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_RewardsAndPenalty", "全部员工列表", "20", "all_RewardsAndPenalty_grid_table");
    })

    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "all_Rewards", "奖励记录列表", "20", "all_Rewards_grid_table");

    $('#all_Penalties').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "all_Penalties", "惩罚记录列表", "20", "all_Penalties_grid_table");
    $('#all_Penalties').removeClass("active");

    $('#all_RewardsAndPenalty').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "all_RewardsAndPenalty", "所有记录列表", "20", "all_RewardsAndPenalty_grid_table");
    $('#all_RewardsAndPenalty').removeClass("active");

    Layout.advancedfilter();
 
</script>