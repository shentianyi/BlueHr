<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "not_Rewards", "未审批列表", "20", "not_Rewards_grid_table");
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_Rewards", "已审批列表", "20", "all_Rewards_grid_table");
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "all_RewardsAndPenalty", "所有记录列表", "20", "all_RewardsAndPenalty_grid_table");
        
    })

    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "not_Rewards", "未审批列表", "20", "not_Rewards_grid_table");

    $('#already_Rewards').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "already_Rewards", "已审批列表", "20", "already_Rewards_grid_table");
    $('#already_Rewards').removeClass("active");

    $('#all_RewardsAndPenalty').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "all_RewardsAndPenalty", "所有记录列表", "20", "all_RewardsAndPenalty_grid_table");
    $('#all_RewardsAndPenalty').removeClass("active");

    Layout.advancedfilter();

    function shRewardsAndPenalty(id) {
            $('#approval_content').dialogModal({
                onOkBut: function () {
                    var approvalStatus = $(".dialogModal").find("#aplStatus").val();
                    var approvalRemark = $(".dialogModal").find("#apvRemarks").val();                   
                   
                    $.post("/RewardsAndPenalty/Approval", { id: id, approvalStatus: approvalStatus, approvalRemark: approvalRemark }, function (data) {

                        if (!data.Success) {
                            $('#approval_content').dialogModal("hide");
                            Layout.popMsg('popMsg-danger', data.Content);
                            return false;
                        }
                        else {
                            $('#approval_content').dialogModal("hide");
                            Layout.popMsg('popMsg-danger', data.Content);
                            window.location.reload();
                        }
                    });
                    
                },
                onCancelBut: function () { },
                onLoad: function () {

                },
                onClose: function () {
                    //window.location.reload();
                }
            });
        }
 
</script>