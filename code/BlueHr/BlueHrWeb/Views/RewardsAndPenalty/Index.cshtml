@using MvcPaging
@model IPagedList<BlueHrLib.Data.RewardsAndPenalty>
@{
    ViewBag.Title = "奖惩管理";
}
@*@Styles.Render("~/Content/degreetype")*@
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>员工管理</li>
    <li>
        <strong>奖惩管理</strong> 
    </li>
</ol>
<hr class="hr-grey" />
<div class="search">
    <form action="/RewardsAndPenalty/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-3 col-md-3 col-sm-6 ol-xs-12">
                <div class="marco-igroup-primary">
                    <span>工号</span>
                    <input type="text" name="Nr" id="Nr" placeholder="工号" value="@ViewBag.Query.StaffNr" />
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" style="margin-top: 5px;">
                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                    <button type="submit" class="marco-btn-success pull-left">
                        <i class="fa fa-search"></i>
                        <span>搜索</span>
                    </button>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                    <button type="button" class="marco-btn-primary advanced-filter-btn" title="自定义搜索">
                        <i class="fa fa-filter"></i>
                        <span>自定义搜索</span>
                    </button>
                </div>
            </div>
        </div>
    </form>

    <form action="/RewardsAndPenalty/AdvancedSearch" method="post">
        <div class="advanced-filter row" style="margin:0;display:none;">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>字段</span>
                    @*@Html.DropDownList("allTableName", ViewData["getAllTableNameList"] as IEnumerable<SelectListItem>)*@
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>条件</span>
                    @*@Html.DropDownList("searchConditions", ViewData["searchConditionsList"] as IEnumerable<SelectListItem>)*@
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>值1</span>
                    @*<input type="text" name="searchValueFirst" value="@ViewBag.searchValueFirst" />*@
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>值2</span>
                    @*<input type="text" name="searchValueSecond" value="@ViewBag.searchValueSecond" />*@
                    <span><button type="submit" class="marco-btn-primary" style="margin:0;background:transparent;border-color:transparent;">确定</button></span>
                </div>
            </div>
        </div>
    </form>
</div>

<hr class="hr-primary" />

<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">

        <a href="/RewardsAndPenalty/Create" class="pull-right" style="margin-top: -10px; margin-right:15px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>
        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">

            <li role="presentation" class="active"><a href="#all_Rewards" role="tab" data-toggle="tab">奖励记录</a></li>
            <li role="presentation"><a href="#all_Penalties" role="tab" data-toggle="tab">惩罚记录</a></li>
            <li role="presentation"><a href="#all_RewardsAndPenalty" role="tab" data-toggle="tab">所有记录</a></li>

        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane  active" id="all_Rewards">
                <div id="all_Rewards_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>工号</th>
                            <th>奖惩类型</th>
                            <th>奖惩项目</th>
                            <th>奖惩描述</th>
                            <th>申请日期</th>
                            <th>申请人</th>
                            <th>审批人</th>
                            <th>审批状态</th>
                            <th>审批时间</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.staffNr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.project)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.createdAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.createdUserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.approvalUserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.approvalStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.approvalAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.approvalRemark)
                                    </td>
                                    <td>
                                        <a href="/RewardsAndPenalty/Delete/@item.id" class="option-icon-primary" title="详情">
                                            <i class="fa fa-eye"></i>
                                        </a>    
                                        <a href="/RewardsAndPenalty/Edit/@item.id" class="option-icon-warning" title="编辑">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a title="审批" id="shRewardsAndPenalty" class="option-icon-danger" onclick="shRewardsAndPenalty(@item.id)">
                                            <i class="fa fa-check"></i>
                                        </a>                                                                        
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane" id="all_Penalties">
