    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "on_transfer", "员工调岗列表", "20", "on_transfer_grid_table");
    })

    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "on_staff", "员工调岗列表", "20", "on_staff_grid_table");
    
