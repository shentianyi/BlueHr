                <div id="all_card_type_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>身份证号</th>
                            <th>所属区域</th>
                            <th>工号</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.residenceAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nr)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

