@using MvcPaging

@model IPagedList<BlueHrLib.Data.Staff>

@{
    ViewBag.Title = "身份证管理";
}
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>身份证管理</li>
</ol>
<hr class="hr-grey" />

<div class="search">
    <form action="/Idcard/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>身份证号</span>
                    <input type="text" name="Idnum" id="Idnum" placeholder="身份证号" value="@ViewBag.Query.Name" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>工号</span>
                    <input type="text" name="Nr" id="Nr" placeholder="工号" value="@ViewBag.Query.Nr" />
                </div>
            </div>
            @*<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>身份证地址</span>
                    <input type="text" name="Address" id="Address" placeholder="身份证地址" value="@ViewBag.Query.ResidenceAddress" />
                </div>
            </div>*@
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
                <button type="submit" class="marco-btn-success">
                    <i class="glyphicon glyphicon-search"></i>
                    搜索
                </button>
            </div>
        </div>
    </form>
</div>
<hr class="hr-primary" />
<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">

        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">

            <li role="presentation" class="active"><a href="#all_Idcard" role="tab" data-toggle="tab">所有身份证</a></li>


        </ul>
        <div class="tab-content">


            <div role="tabpanel" class="tab-pane  active" id="all_Idcard">
                <div id="all_Idcard_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>身份证号</th>
                            <th>工号</th>
                            <th>姓名</th>
                            <th>电话</th>
                            <th>地址</th>
                            


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                
                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.nr)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.residenceAddress)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>


    </div>
</div>
<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_Idcard", "所有身份证列表", "20", "all_Idcard_grid_table");

    })

    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_Idcard", "所有身份证列表", "20", "all_Idcard_grid_table");



</script>