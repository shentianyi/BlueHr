@using BlueHrWeb.Helpers.View
@{
    ViewBag.Title = "我的主页";
}

<style type="text/css">
    .marco-nbody{
        max-height: 420px;
        overflow: auto;
    }
    thead{
        font-weight: 800;
    }
</style>
@{
    bool canStaff = MenuAuthHelper.CanShow("Staff", "Index");
    bool canCreate = MenuAuthHelper.CanShow("Staff", "Create");
    bool canAttendanceRecordDetail = MenuAuthHelper.CanShow("AttendanceRecordDetail", "Index");
    bool canCompany = MenuAuthHelper.CanShow("Company", "TreeShow");
    bool canOntrail = MenuAuthHelper.CanShow("Staff", "Ontrail");
    bool canBirthday = MenuAuthHelper.CanShow("Home", "Birthday");
    bool canExpired = MenuAuthHelper.CanShow("Home", "Expired");
    bool canHomeOntrail = MenuAuthHelper.CanShow("Home", "Ontrail");
    bool canStaffcount = MenuAuthHelper.CanShow("Home", "Staffcount");
    bool canCompanydepartment = MenuAuthHelper.CanShow("Home", "Companydepartment");
}
<div style="margin: 10px;">
    @* 简单的显示 *@
    <div class="row" style="margin-top:20px;">
        <!--离职/在职-->
        @if (canStaff)
        {
            <div class="col-lg-3 col-md-3 col-xs-6 col-sm-12 dashboard-box-default">
                <div class="dashboard-box" title="点击查看员工状态">
                    <a href="/Staff/Index">
                        <div class="dashboard-icon">
                            <i class="fa fa-users"></i>
                        </div>
                        <div class="dashboard-content">
                            <p>离职 / 在职</p>
                            <div class="show"><span id="OutWork">无</span> / <span id="InWork">无</span></div>
                        </div>
                    </a>
                </div>
            </div>
        }
        
        <!--公司部门-->
        @if (canCompany)
        {
            <div class="col-lg-3 col-md-3 col-xs-6 col-sm-12 dashboard-box-primary">
                <div class="dashboard-box" title="公司部门">
                    <a href="/Company/TreeShow">
                        <div class="dashboard-icon">
                            <i class="fa fa-bank"></i>
                        </div>
                        <div class="dashboard-content">
                            <p id="companyName"> </p>
                            <div class="show">
                                <span id="departmentNum">  </span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
        <!--员工将转正/已转正-->
        @if (canOntrail)
        {
            <div class="col-lg-3 col-md-3 col-xs-6 col-sm-12 dashboard-box-warning">
                <div class="dashboard-box" title="点击查看转正员工">
                    <a href="/Staff/Ontrail">
                        <div class="dashboard-icon">
                            <i class="fa fa-user"></i>
                        </div>
                        <div class="dashboard-content">
                            <p>将转正 / 待转正</p>
                            <div class="show"><span id="willNum">无</span> / <span id="waitNum">无</span></div>
                        </div>
                    </a>
                </div>
            </div>
        }
        <!--今天生日-->
        @if (canBirthday)
        {
            <div class="col-lg-3 col-md-3 col-xs-6 col-sm-12 dashboard-box-success">
                <div class="dashboard-box" title="点击查看生日员工">
                    <a href="#birthday">
                        <div class="dashboard-icon">
                            <i class="fa fa-birthday-cake"></i>
                        </div>
                        <div class="dashboard-content">
                            <p>今天生日</p>
                            <div class="show"><span id="birthDayNum">无</span></div>
                        </div>
                    </a>
                </div>
            </div>
        }

    </div>

    <hr class="hr-grey" />

    @* 合同到期和员工转正 *@
    <div class="row">
        <!--员工合同到期提醒-->
        @if (canExpired)
        {
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="marco-npanel-primary">

                    <div class="marco-nheading">
                        <i class="fa fa-newspaper-o"></i>
                        <span>员工合同到期提醒</span>
                    </div>
                
                    <div class="marco-nbody">
                        @* 进行tab显示员工合同到期提醒 *@
                        <div class="marco-tabs-normal">
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active"><a href="#contractThisMonth" role="tab" data-toggle="tab">本月</a></li>
                                <li role="presentation"><a href="#contractNextMonth" role="tab" data-toggle="tab">下月</a></li>
                                <li role="presentation"><a href="#contractExpire" role="tab" data-toggle="tab">过期</a></li>
                            </ul>
                            <div class="tab-content">
                                <!--本月合同到期员工-->
                                <div role="tabpanel" class="tab-pane active" id="contractThisMonth">
                                    <span>本月合同到期员工</span>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                           	    <td>姓名</td>
                                                <td>员工号</td>
                                                <td>合同签订次数</td>
                                                <td>合同到期时间</td>
                                            </tr>
                                        </thead>
