<script type="text/javascript">
    $.ajax({
        url: '/Staff/BirthdayDetail',
        type: 'get',
        success: function (data) {
        	$("#staffBirthday").empty();

            if(data.length>0){
            	for(var i =0; i< data.length; i++){
            		var Html = "<tr><td > "+data[i].姓名+" </td><td > "+data[i].性别+" </td><td > "+data[i].出生日期+" </td><td > "+data[i].年龄+" </td></tr>";
            		$(Html).appendTo($("#staffBirthday"));
            	}
            }else{

            }

        },
        error: function () {
            console.log("CCCCCCCC");
        }
    });

     $.ajax({
        url: '/Staff/ToEmployeesDetail',
        type: 'get',
        success: function (data) {       	
        	$("#ToEmployees").empty();
            if(data.length>0){
            	for(var i =0; i< data.length; i++){
            		var Html = "<tr><td > "+data[i].姓名+" </td><td > "+data[i].性别+" </td><td > "+data[i].入职日期+" </td><td > "+data[i].转正日期+" </td><td > "+data[i].剩余+" </td></tr>";
            		$(Html).appendTo($("#ToEmployees"));
            	}
            }else{

            }
        },
        error: function () {
            console.log("CCCCCCCC");
        }
    });

    $.ajax({
        url: '/Staff/CountStaffBirthday',
        type: 'get',
        success: function (data) {  
            console.log(data); 	
        	$("#birthDayNum").html(data.生日 + "人")         
        },
        error: function () {
            console.log("CCCCCCCC");
        }
    });

    $.ajax({
        url: '/MessageRecord/CountToEmployees',
        type: 'get',
        success: function (data) {
            $("#willNum").html(data.即将转正 + "人");
        },
        error: function () {
            console.log("CCCCCCCC");
        }
    });

    $.ajax({
        url: '/Staff/StaffCount',
        type: 'get',
        success: function (data) {

            $("#onTrailNum").html(data.试用期员工 + "人");
            $("#StaffNum").html(parseInt(data.正式员工) + parseInt(data.离职员工) + parseInt(data.试用期员工) + "人");
            $("#waitNum").html(data.试用期员工 + "人");

            var Series = [{ name: "员工分布", data: [parseInt(data.正式员工), parseInt(data.离职员工), parseInt(data.试用期员工)] }]

            $('#staffChart').highcharts({
                chart: {
                    type: 'column'
                },
                credits: {
                    enabled: false
                },
                title: {
                    text: '公司员工分布'
                },
                xAxis: {
                    categories: ["正式员工", "离职员工", "试用期员工"]
                },
                yAxis: {
                    allowDecimals: false,
                    title: {
                        text: '人'
                    }
                },
                tooltip: {
                    formatter: function () {
                        return '<b>' + this.x + '</b><br/> 共' + this.point.y + "人";
                    }
                },
                series: Series
            });
        },
        error: function () {
            console.log("CCCCCCCC");
        }
    });

    $.ajax({
        url: '/Company/CountDepartment',
        type: 'get',
        success: function (data) {
            var CompanyAndDepartment = data;
            if (data.length > 0) {
                $("#companyName").html(CompanyAndDepartment[0].CompanyName);
                $("#departmentNum").html("共" + CompanyAndDepartment[0].DepartmentCount + "个部门");

                var XAxis = new Array();
                var SeriesData = new Array();
                for (var i = 0; i < data.length; i++) {
                    XAxis.push(data[i].CompanyName);
                    SeriesData.push(parseInt(data[i].DepartmentCount));
                }

                $('#companyChart').highcharts({
                    chart: {
                        type: 'column'
                    },
                    credits: {
                        enabled: false
                    }
                        ,
                    title: {
                        text: '公司部门展示'
                    },
                    xAxis: {
                        categories: XAxis
                    },
                    yAxis: {
                        allowDecimals: false,
                        title: {
                            text: '个'
                        }
                    },
                    tooltip: {
                        formatter: function () {
                            return '<b>' + this.x + '</b><br/> 共' + this.point.y + "个部门";
                        }
                    },

                    series: [{
                        name: "公司部门分布",
                        data: SeriesData
                    }]
                });

                var i = 0;
                setInterval(function () {
                    if (i < CompanyAndDepartment.length) {
                        $("#companyName").html(CompanyAndDepartment[i].CompanyName);
                        $("#departmentNum").html("共" + CompanyAndDepartment[i].DepartmentCount + "个部门");
                        i++;
                    } else {
                        i = 0;
                    }
                }, 10000);

            }

        },
        error: function () {
            console.log("DDDDD");
        }
    })
</script>