@using BlueHrLib.Data

@model BlueHrLib.Data.AttendanceRecordCalView


@{
    ViewBag.Title = "Edit";
}

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>调整工时</li>
</ol>
@if (Model != null) {
    <span>
        考勤日期：@Model.attendanceDateStr
        是否异常：@Model.isExceptionStr
    </span>
    <span>
     部门：@Model.departmentName    
    </span>

    <span>
        工号：@Model.staffNr
    </span>

    <span>
        姓名：@Model.name
    </span>

    <span>
        考勤工时：<span id="actWorkingHourRoundDisplay">@Model.actWorkingHourRound</span>
    </span>
    <span>
        调整为:@Html.EditorFor(model => model.actWorkingHourRound, new { htmlAttributes = new { @class = "form-control" } })
    </span>
    <span>
        是否处理：<input type="checkbox" checked="checked" id="isExceptionHandled"/>
    </span>
    <span>
        <button type="submit" class="marco-btn-success" onclick="updateActWorkingHour()">
            <i class="glyphicon glyphicon-ok"></i>
            确定
        </button>
    </span>
    <input type="hidden" id="record-id" value="@Model.id" />


    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="usual-table">
            <div class="table-heading">
                考勤详细数据列表
            </div>
            <div class="table-body content_3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>刷卡日期</th>
                            <th>刷卡时间</th>
                            <th>设备编号</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewData["attendRecords"] != null)
                        {
                            int i = 0;
                            foreach (var item in ViewData["attendRecords"] as List<AttendanceRecordDetailView>)
                            {
                                <tr>
                                    <td>@(i += 1)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.recordAtDateStr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.recordAtTimeStr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.device)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
       
    </div>

}
else {
    <span>未找到记录，请联系管理员</span>
}
<script type="text/javascript">
    
    function updateActWorkingHour() {
        if (confirm("确认提交修改？")) {
            var hour = $("#actWorkingHourRound").val();
            var id=$("#record-id").val();
            var handled = $("#isExceptionHandled").is(':checked');
            console.log(hour);
            console.log(id);
            console.log(handled);

            if (isNaN(hour)) {
                alert("请填写正确的数字");
                return;
            }

            $.post("/AttendanceRecordCal/UpdateActHour/" + id, { actWorkingHourRound: hour, isExceptionHandled: handled }, function (data) {
                if (data.Success) {
                    alert("调整成功！");
                    $("#actWorkingHourRoundDisplay").text(hour);
                } else {
                    alert("调整失败："+data.Content);
                }
            }, "json");
        }
    }

   
</script>
 