@model BlueHrLib.Data.AttendanceRecordCal

<div id="attendancerecordcal" style="margin:20px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>考勤管理</li>
        <li>@Html.ActionLink("统计记录管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "Success" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                <span>{{action}}</span>

                <div class="pull-right" style="margin-top:-7px;">
                    <button type="submit" class="marco-btn-primary" style="padding:0;">
                        {{actionBtn}}
                    </button>
                </div>
            </div>

            <div class="marco-nbody row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>员工号</span>
                        @if (Model != null)
                        {
                            <select name="staffNrSelect" id="staffNrSelect"></select>
                            <input type="hidden" id="staffNr" name="staffNr" placeholder="员工号" value="@Model.staffNr"  />
                            <!--@Html.EditorFor(model => model.staffNr)-->
                        }
                        else
                        {
                            <select name="staffNrSelect" id="staffNrSelect"></select>
                            <input type="hidden" id="staffNr" name="staffNr" placeholder="员工号" />
                        }
                        <!--@Html.EditorFor(model => model.staffNr)-->
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>日期</span>
                        @if (Model!=null)
                        {
                            <input id="attendanceDate" name="attendanceDate" value="@Model.attendanceDate.ToString("yyyy-MM-dd")" class="date-picker" />
                        }
                        else
                        {
                            <input id="attendanceDate" name="attendanceDate" value="" class="date-picker" />
                        }
                        <!--@Html.EditorFor(model => model.attendanceDate, new { htmlAttributes = new { @class = "date-picker" } })-->
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>工作时长</span>
                        @Html.EditorFor(model => model.actWorkingHour, new { htmlAttributes = new { type="number" } })
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>加班时长</span>
                        @Html.EditorFor(model => model.actExtraWorkingHour, new { htmlAttributes = new { type = "number" } })
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>加班类型</span>
                        @Html.DropDownList("extraWorkType", ViewData["extraWorkTypeList"] as IEnumerable<SelectListItem>)
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="marco-textarea">
                        <span>备注信息</span>
                        @Html.TextAreaFor(model => model.remark)
                    </div>
                </div>
            </div>
        </div>
    }

    @Html.Partial("_PartialDetail")

</div>

<script type="text/javascript">
    Layout.init();
    
    Layout.SetTypeStaffNr(100, 'staffNrSelect', 'staffNr', true);
</script>