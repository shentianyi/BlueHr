@model IEnumerable<BlueHrLib.Data.AttendanceRecordCalExceptionView>

@{
    ViewBag.Title = "异常统计列表";
}

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>异常统计列表</li>
</ol>

<hr class="hr-grey" />
<div class="usual-table">
   
    <div class="table-body content_3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>日期</th>
                    <th>未处理异常数量</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
            {
                foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.attendanceDateStr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.isExceptionHandledCount)
                            </td>
                            <td>
                                <a href="/AttendanceRecordCal/Search?IsException=True&IsExceptionHandled=False&AttendanceDateFrom=@item.attendanceDate&AttendanceDateEnd=@item.attendanceDate">处理</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">
    Layout.init();
    Layout.TbodyHeight('.table-body', 310);
</script>