    Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "cancel_LeaveRecord", "销假记录列表", "20", "cancel_LeaveRecord_grid_table");
    $('#cancel_LeaveRecord').removeClass("active");

    function shLeaveRecord(id) {
        $('#approval_content').dialogModal({
            onOkBut: function () {
                var approvalStatus = $(".dialogModal").find("#aplStatus").val();
                var approvalRemark = $(".dialogModal").find("#apvRemarks").val();

                $.post("/leaveRecord/approval", { id: id, approvalStatus: approvalStatus, approvalRemark: approvalRemark }, function (data) {

                    if (!data.Success) {
                        $('#approval_content').dialogModal("hide");
                        Layout.popMsg('popMsg-danger', data.Content);
                        return false;
                    }
                    else {
                        $('#approval_content').dialogModal("hide");
                        Layout.popMsg('popMsg-danger', data.Content);
                        window.location.reload();
                    }
                });

            },
            onCancelBut: function () { },
            onLoad: function () {
            },
            onClose: function () {
                //window.location.reload();
            }
        });
    }

    //销假操作
    function cancelLeaveRecord(id){
        var w=confirm("确认进行销假操作吗？");
        if(w){
            $.ajax({
                url:'/LeaveRecord/SetIsDelete',
                type:'post',
                data:{id:id},
                success:function(data){
                    if (data.Success) {
                         window.location.reload();
                    }
                }
            });

        }
    }

    //弹出框
    $('.advanced-filter-btn').click(function () {
        $('#search_content').dialogModal({
            onOkBut: function () {
            },
            onCancelBut: function () { },
            onLoad: function () {
            },
            onClose: function () {
            }
        });
    });

    function addCondition(){
        if($(".itm .cln").length<5){
            $(".cln:last").after($('.cln:last').clone(true));
        }   
    }
    
    function deleteCondition(){
        if($(".itm .cln").length<=2){

        }else{
            $(".cln:last").remove();
        }
    }
</script>