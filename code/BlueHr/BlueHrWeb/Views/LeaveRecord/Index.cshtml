@using MvcPaging

@model IPagedList<BlueHrLib.Data.LeaveRecord>

@{
    ViewBag.Title = "请假管理";
}

@*@Styles.Render("~/Content/degreetype")*@

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>考勤管理</li>
    <li>
        <strong>请假管理</strong>
    </li>
</ol>

<hr class="hr-grey" />
<div class="search">
    <form action="/LeaveRecord/Search" method="get">
        <div class="row" style="margin:0;">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>工号</span>
                    <input type="text" name="Nr" id="Nr" placeholder="工号" value="@ViewBag.Query.staffNr" />
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
                <button type="submit" class="marco-btn-success">
                    <i class="glyphicon glyphicon-search"></i>
                    搜索
                </button>
            </div>
        </div>
    </form>
</div>
<hr class="hr-primary" />
<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">

        <a href="/LeaveRecord/Create" class="pull-right" style="margin-top: -10px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>

        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">

            <li role="presentation" class="active"><a href="#all_LeaveRecord" role="tab" data-toggle="tab">请假记录</a></li>
            <li role="presentation"><a href="#cancel_LeaveRecord" role="tab" data-toggle="tab">销假记录</a></li>


        </ul>
        <div class="tab-content">


            <div role="tabpanel" class="tab-pane  active" id="all_LeaveRecord">
                <div id="all_LeaveRecord_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>工号</th>
                            <th>起始日期</th>
                            <th>结束日期</th>
                            <th>请假原因</th>
                            <th>申请时间</th>
                            <th>申请人</th>
                            <th>审批人</th>
                            <th>审批时间</th>
                            <th>审批状态</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if(item.isDelete==false){
                                    <tr>
                                        <td>
                                            <a href="/Staff/Delete/@item.staffNr" class="option-icon-primary" title="员工详情">
                                                @Html.DisplayFor(modelItem => item.staffNr)
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.leaveStart)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.leaveEnd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.remark)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.createdAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.userId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalUserId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalAt)
                                        </td>
                                        @if (item.approvalStatus == null)
                                        {
                                            <td>未审批</td>
                                        }
                                        else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.approvalStatus)
                                            </td>
                                        }

                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalRemark)
                                        </td>
                                        <td>
                                            @if (item.approvalStatus == null)
                                            {
                                                <a href="/LeaveRecord/Delete/@item.id" class="option-icon-primary" title="详情">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="/LeaveRecord/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a title="审批" class="option-icon-danger" onclick="shLeaveRecord(@item.id)">
                                                    <i class="fa fa-check"></i>
                                                </a>
                                            }
                                                <a title="销假" class="option-icon-danger" onclick="cancelLeaveRecord(@item.id)">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane  active" id="cancel_LeaveRecord">
                <div id="cancel_LeaveRecord_grid_table" style="margin:auto;"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>工号</th>
                            <th>起始日期</th>
                            <th>结束日期</th>
                            <th>请假原因</th>
                            <th>申请时间</th>
                            <th>申请人</th>
                            <th>审批人</th>
                            <th>审批时间</th>
                            <th>审批状态</th>
                            <th>备注</th>
                            @*<th>操作</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if(item.isDelete==true){
                                    <tr>
                                        <td>
                                            <a href="/Staff/Delete/@item.staffNr" class="option-icon-primary" title="员工详情">
                                                @Html.DisplayFor(modelItem => item.staffNr)
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.leaveStart)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.leaveEnd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.remark)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.createdAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.userId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalUserId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalAt)
                                        </td>
                                        @if (item.approvalStatus == null)
                                        {
                                            <td>未审批</td>
                                        }
                                        else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.approvalStatus)
                                            </td>
                                        }
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalRemark)
                                        </td>
                                        @*<td>
                                            @if (item.approvalStatus == null)
                                            {
                                                <a href="/LeaveRecord/Delete/@item.id" class="option-icon-primary" title="详情">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="/LeaveRecord/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a title="审批" class="option-icon-danger" onclick="shLeaveRecord(@item.id)">
                                                    <i class="fa fa-check"></i>
                                                </a>
                                            }
                                        </td>*@
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

//请假审批
<div id="approval_content" class="import_content" style="display:none;">
    <div class="dialogModal_header" style="background:steelblue;color:white;">
        请假审批
    </div>

    <div class="dialogModal_content">
        <div class="marco-nbody row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="marco-igroup-primary">
                    <span>审批状态</span>
                    <select id="aplStatus" name="aplStatus">
                        <option value="通过审批">审批通过</option>
                        <option value="未通过审批">审批未通过</option>
                    </select>
                </div>
            </div>
            <br/>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="marco-textarea">
                    <span>审批备注</span>
                    <textarea id="apvRemarks" name="apvRemarks"></textarea>
                </div>
            </div>

            <div class="dialogModal_footer row" style="margin: 0;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button class="marco-btn-primary pull-right" title="确定" data-dialogmodalbut="ok" type="button" >
                        确定
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    Layout.init();

    $(window).resize(function () {
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_LeaveRecord", "请假记录列表", "20", "all_LeaveRecord_grid_table");
        Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "cancel_LeaveRecord", "销假记录列表", "20", "cancel_LeaveRecord_grid_table");
    })

    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "all_LeaveRecord", "请假记录列表", "20", "all_LeaveRecord_grid_table");

    $('#cancel_LeaveRecord').addClass("active");
    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "cancel_LeaveRecord", "销假记录列表", "20", "cancel_LeaveRecord_grid_table");
    $('#cancel_LeaveRecord').removeClass("active");

    function shLeaveRecord(id) {
        $('#approval_content').dialogModal({
            onOkBut: function () {
                var approvalStatus = $(".dialogModal").find("#aplStatus").val();
                var approvalRemark = $(".dialogModal").find("#apvRemarks").val();

                $.post("/leaveRecord/approval", { id: id, approvalStatus: approvalStatus, approvalRemark: approvalRemark }, function (data) {

                    if (!data.Success) {
                        $('#approval_content').dialogModal("hide");
                        Layout.popMsg('popMsg-danger', data.Content);
                        return false;
                    }
                    else {
                        $('#approval_content').dialogModal("hide");
                        Layout.popMsg('popMsg-danger', data.Content);
                        window.location.reload();
                    }
                });

            },
            onCancelBut: function () { },
            onLoad: function () {

            },
            onClose: function () {
                //window.location.reload();
            }
        });
    }

    function cancelLeaveRecord(id){
        var w=confirm("确认进行销假操作吗？");
        if(w){
            $.ajax({
                url:'/LeaveRecord/SetIsDelete',
                type:'post',
                data:{id:id},
                success:function(data){
                    if (data.Success) {
                         window.location.reload();
                    }
                }
            });

        }
    }
</script>