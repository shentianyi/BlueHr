    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 260, false, "not_LeaveRecord", "未审批列表", "20", "not_LeaveRecord_grid_table");

    $('#already_LeaveRecord').addClass("active");    
    Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "already_LeaveRecord", "已审批列表", "20", "already_LeaveRecord_grid_table");
    $('#already_LeaveRecord').removeClass("active");

    $('#all_LeaveRecord').addClass("active");
