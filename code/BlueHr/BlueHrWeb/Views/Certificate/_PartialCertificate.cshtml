@model BlueHrLib.Data.Certificate

<div id="certificate" style="margin:10px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("证照管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody row">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>证照类别*</span>
                        @Html.DropDownList("certificateTypeId", ViewData["certificateTypeList"] as IEnumerable<SelectListItem>)
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>&nbsp;&nbsp;&nbsp;级&nbsp;别&nbsp;</span>
                        @Html.EditorFor(model => model.certiLevel)
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>开始有效期</span>
                        @Html.EditorFor(model => model.effectiveFrom, new { htmlAttributes = new { @class = "date-picker" } })
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>截止有效期</span>
                        @Html.EditorFor(model => model.effectiveEnd, new { htmlAttributes = new { @class = "date-picker" } })
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-danger">
                        <span>发证单位</span>
                        @Html.EditorFor(model => model.institution)
                    </div>
                </div>


                @*<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="marco-textarea">
                            <label for="remark">备注</label>
                            @if (Model != null)
                            {
                                @Html.TextAreaFor(model => model.remark)
                            }
                            else
                            {
                                <textarea name="remark" placeholder="备注"></textarea>
                            }
                        </div>
                    </div>*@
            </div>

            <div class="marco-npanel-normal">
                <div class="marco-nheading">
                    <span>证照附件</span>
                </div>

                <div class="marco-nbody row">

                    <div class="photoleft">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>选择证照附件上传</span>
                                <input type="file" name="photoUpload" id="photoUpload" onchange="Staff.create_image_preview(this)" />

                                @Html.EditorFor(model => model.institution, new { htmlAttributes = new { type = "hidden" } })
                            </div>
                            <div class="marco-igroup-warning" style="visibility:hidden;">
                                <span id="photoName"></span>
                            </div>
                        </div>
                    </div>

                    <div id="photopreview">
                        @if (Model != null)
                        {
                            <img src="@Model.institution" alt="证照附件" style="width: 200px; height: 150px;" />
                        }
                    </div>
                </div>
            </div>

            <div class="marco-npanel-normal">
                <div class="marco-nheading">
                    <span>备注信息</span>
                </div>

                <div class="marco-nbody">
                    <div class="marco-textarea" style="margin-top:5px;">
                        <textarea name="remark" rows="5"></textarea>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    Layout.rangedatepicker('.date-start-picker', '.date-end-picker');
    Layout.datepicker('.date-picker');
</script>
