@using MvcPaging
@using BlueHrWeb.Helpers.View
@model IPagedList<BlueHrLib.Data.Certificate>
@{
    ViewBag.Title = "证照管理";
}
@{
    bool canCreate = MenuAuthHelper.CanShow("Certificate", "Create");
    bool canEdit = MenuAuthHelper.CanShow("Certificate", "Edit");
    bool canDelete = MenuAuthHelper.CanShow("Certificate", "Delete");
}

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>员工管理</li>
    <li>
        <strong>证照管理</strong>
    </li>
</ol>
<hr class="hr-grey" />

<div class="row" style="margin:0;">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="marco-igroup-primary">
            <span>员工号</span>
            @if (@ViewBag.StfModel != null)
            {
                @ViewBag.StfModel.nr
            }
        </div>
    </div>

    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="marco-igroup-primary">
            <span>部门</span>
            @if (@ViewBag.StfModel != null && @ViewBag.StfModel.Department!=null)
            {
                @ViewBag.StfModel.Department.name
            }
            else
            {
                <p>&nbsp;</p>
            }
        </div>
    </div>

    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <div class="marco-igroup-primary">
            <span>职位</span>
            @if (@ViewBag.StfModel != null && @ViewBag.StfModel.JobTitle != null)
            {
                @ViewBag.StfModel.JobTitle.name
            }
            else
            {
                <p>&nbsp;</p>
            }
        </div>
    </div>
</div>
<hr class="hr-grey" />

<div style="margin:20px;">
    <div class="minitor-show marco-tabs-default">
            @if (canCreate)
            {
            <a href="/Certificate/Create" class="pull-right" style="margin-top: -10px;">
                <button class="marco-btn-primary">
                    <i class="glyphicon glyphicon-plus-sign"></i>
                    <span>创建</span>
                </button>
            </a>
            }
        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#Certificate_staff" role="tab" data-toggle="tab">证照列表</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="Certificate_staff">
                <div calss="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="Certificate_staff_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>证照类别</th>
                            <th>有效期至</th>
                            <th>有效期到</th>
                            <th>发证单位</th>
                            <th>备注</th>
                            <th>附件</th>
                            <th>操作</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CertificateType.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.effectiveFrom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.effectiveEnd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.institution)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.remark)
                                    </td>
                                    <td>
                                        @{
                                            List<string> imgTypes = new List<string>() { ".jpg", ".png", ".jpeg", ".bmp", ".gif" };
                                            foreach (var atch in item.Attachments)
                                            {
                                                var imgExtension = atch.name.Remove(0, atch.name.LastIndexOf(".")).ToLower();
                                                if (imgTypes.Contains(imgExtension))
                                                {
                                                    <a class="img-popup-link" href="@atch.path">@atch.name</a>
                                                }
                                                else
                                                {
                                                    <a href="/Certificate/DownFile?fileName=@atch.name&filePath=@atch.path">@atch.name</a>
                                                }
                                                <br />
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (canDelete)
                                        {
                                            <a href="/Certificate/Delete/@item.id?nr=@ViewBag.StfModel.nr" class="option-icon-primary" title="详情">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        }
                                        @if (canEdit)
                                        {
                                            <a href="/Certificate/Edit/@item.id?nr=@ViewBag.StfModel.nr" class="option-icon-warning" title="编辑">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/magnific-popup")

<script type="text/javascript">

    Layout.init();

    var TableWidth = $(window).width() - 250;

    if($.cookie('left_sidebar')=="true"){
        TableWidth  = $(window).width() - 110;
    }

    $(window).resize(function () {
        Layout.TransferTableToGrid(TableWidth, $(window).height() - 250, false, "Certificate_staff", "证照列表", "20", "Certificate_staff_grid_table");
    })
     Layout.TransferTableToGrid(TableWidth, $(window).height() - 250, false, "Certificate_staff", "证照列表", "20", "Certificate_staff_grid_table");

    $(function ($) {
        $('.img-popup-link').magnificPopup({
            type: 'image'
            // other options
        });
    });

</script>
