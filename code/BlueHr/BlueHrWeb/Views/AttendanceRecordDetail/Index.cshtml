@using MvcPaging
@using BlueHrWeb.Helpers.View

@model IPagedList<BlueHrLib.Data.AttendanceRecordDetailView>

@{
    ViewBag.Title = "Index";
}
@{
    bool canDelete = MenuAuthHelper.CanShow("AttendanceRecordDetail", "Delete");
    bool canEdit = MenuAuthHelper.CanShow("AttendanceRecordDetail", "Edit");
    bool canCreate = MenuAuthHelper.CanShow("AttendanceRecordDetail", "Create");
    bool canImport = MenuAuthHelper.CanShow("AttendanceRecordDetail", "Import");
    bool canCal = MenuAuthHelper.CanShow("AttendanceRecordDetail", "Calculate");
}
<style type="text/css">
    .ui-widget-header {
        border: none;
        border-radius: 0;
    }

        .ui-widget-header a {
            color: red;
        }

    .ui-dialog {
        padding: 0;
    }

        .ui-dialog .ui-dialog-content {
            padding: 10px;
        }

    .ui-state-hover {
        background: transparent !important;
        border-color: transparent !important;
        color: darkred;
    }
</style>
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>考勤管理</li>
    <li>
        <strong>考勤记录</strong>
    </li>
</ol>

<hr class="hr-grey" />

<div class="row" style="margin:0;">
    <form action="/AttendanceRecordDetail/Search" method="get">
        @Html.Partial("Search/_CompanyAndDepartmentBar")
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="marco-igroup-primary">
                <span>工号</span>
                <input type="text" name="StaffNr" id="StaffNr" placeholder="工号" value="@ViewBag.Query.StaffNr" />
            </div>
        </div>

        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            <div class="marco-igroup-primary">
                <span>刷卡时间</span>
                <input type="text" name="RecordAtFrom" id="RecordAtFrom" class="datetimepicker" placeholder="开始" value="@ViewBag.Query.RecordAtFrom" /><span>~ </span><input type="text" name="RecordAtEnd" id="RecordAtEnd" class="datetimepicker" placeholder="结束" value="@ViewBag.Query.RecordAtEnd" />
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-5 col-xs-6" style="margin-top: 5px;">
            <div class="macro-bgroup">
                <button type="submit" class="marco-btn-success" style="margin-left:0;">
                    <i class="glyphicon glyphicon-search"></i>
                    搜索
                </button>
                
            </div>
        </div>
    </form>
</div>
<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        @if (canCreate)
        {
            <a href="/AttendanceRecordDetail/Create" class="pull-right" style="margin-top: -10px;">
                <button class="marco-btn-primary">
                    <i class="glyphicon glyphicon-plus-sign"></i>
                    <span>创建</span>
                </button>
            </a>
        }
        @if (canCal)
        {
            <button type="button" class="marco-btn-danger cal-att-button-dialog pull-right" style="margin-top: -5px; margin-right:5px;">
                <i class="glyphicon glyphicon-dashboard"></i>
                计算任务
            </button>
        }
        @if (canImport)
        {
        <button class="marco-btn-primary import-button-dialog pull-right" title="Import" type="button" style="margin-top: -5px; margin-right:5px;">
            <i class="fa fa-cloud-upload"></i>
            导入
        </button>
        }

        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#all_detail_type" role="tab" data-toggle="tab">详细记录管理</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane  active" id="all_detail_type">
                <div id="all_detail_type_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>机构名称</th>
                            <th>人员编号</th>
                            <th>姓名</th>
                            <th>刷卡日期</th>
                            <th>刷卡时间</th>
                            <th>设备编号</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.departmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.staffNr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.recordAtDateStr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.recordAtTimeStr)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.device)
                                    </td>
                                    <td>
                                        @if (canDelete)
                                        {
                                            <a href="/AttendanceRecordDetail/Delete/@item.id" class="option-icon-primary" title="详情">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        }
                                        @if (canEdit)
                                        {
                                            <a href="/AttendanceRecordDetail/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!--导入数据-->
        <div id="dialog_content" class="import_content" style="display:none;">
            <div class="dialogModal_header" style="background:steelblue;color:white;">
                导入考勤打卡记录
            </div>
            <div class="dialogModal_content">
                <strong>选择数据文件:</strong>
                <hr />
                <input class="item-data-uploader" type="file" name="files[]" data-url="/AttendanceRecordDetail/Import" />
                <div class="item-data-uploader-preview" style="display:none;"></div>
                <hr />
                <a href="~/Template/考勤记录导入文件模板.xlsx" target="_blank">下载文件模板</a>
            </div>
            @*<div class="dialogModal_footer">
    <button type="submit" class="btn btn-primary ff" style="width:200px;"  >OK</button>
</div>*@
</div>


<!--计算任务-->
<div id="dialog_cal_att_content" class="cal_att_content" style="display:none;">
<blockquote class="marco-blockquote-primary">
    新建考勤计算任务
</blockquote>

<div class="marco-igroup-primary">
    <span>选择时间(必选):</span>
    <input type="text" name="CalDate" id="CalDate" class="current-datetimepicker" placeholder="考勤时间" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
</div>

@*<div class="marco-igroup-primary">
    <span>选择班次(可选):</span>
    @Html.DropDownList("ShiftCode", ViewData["shiftList"] as IEnumerable<SelectListItem>)
</div>*@

<hr class="hr-grey" />

<button type="button" class="pull-left marco-btn-primary" style="width:200px; background: #3498db;" onclick="calculateAttendance()">确定</button>

<button type="button" class="pull-right marco-btn-warning" style="width:200px; background:#e67e22; color: white;" onclick="cancelCalculateAttendance()">取消</button>
</div>

<script type="text/javascript">
Layout.init();

var TableWidth = $(window).width() - 300;
if($.cookie('left_sidebar')=="true"){
    TableWidth = $(window).width() -110;
}

Layout.TransferTableToGrid(TableWidth, $(window).height() - 300, false, "all_detail_type", "详细记录管理", "20", "all_detail_type_grid_table");

$('.datetimepicker').datetimepicker({
    format: 'Y-m-d H:i',
    defaultTime: '00:00'
});

$('.current-datetimepicker').datetimepicker({
    format: 'Y-m-d'
});

$('.import-button-dialog').click(function () {
    $('#dialog_content').dialogModal({
        onOkBut: function () {
        },
        onCancelBut: function () { },
        onLoad: function () {
            data_upload(".item-data-uploader");
        },
        onClose: function () {

        },
    });
});

var dialog;

dialog = $(".cal_att_content").dialog({
    autoOpen: false,
    height: 280,
    width: 550,
    modal: true
});

$('.cal-att-button-dialog').click(function () {
    if (dialog != null)
        dialog.dialog("open");
});

function calculateAttendance() {
    var dateTime = $("#CalDate").val();
    var shiftCode = $("#ShiftCode").val();

    if (dateTime.length == 0) {
        alert("请选择时间");
        return false;
    }

    $.ajax({
        type: 'POST',
        datatype: 'JSON',
        url: '/AttendanceRecordDetail/Calculate',
        data: {
            DateTime: dateTime,
            ShiftCode: shiftCode
        },
        success: function (data) {
            if (data.Success) {
                alert(data.Content);
                if (dialog != null)
                    dialog.dialog("close");
            } else {
                alert(data.Content);
            }
        },
        error: function (data) {
            alert("无法请求到服务，请检查确认之后再运行。");
        }
    });
}
function cancelCalculateAttendance() {
    if (dialog != null)
        dialog.dialog("close");
}

</script>
