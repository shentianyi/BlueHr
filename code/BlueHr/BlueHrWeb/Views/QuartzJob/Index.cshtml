@using BlueHrWeb.Helpers.View
@model IEnumerable<BlueHrLib.Data.QuartzJob>

@{
    ViewBag.Title = "考勤计算设置";
}
@{
    bool canDelete = MenuAuthHelper.CanShow("QuartzJob", "Delete");
    bool canCreate = MenuAuthHelper.CanShow("QuartzJob", "Create");
}
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>考勤管理</li>
    <li>
        <strong>考勤计算设置</strong>
    </li>
</ol>
<hr class="hr-grey" />

<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        @if (canCreate)
        {
        <a href="/QuartzJob/Create" class="pull-right" style="margin-top: -10px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>
        }

        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#inter" role="tab" data-toggle="tab">任务列表</a></li>
        </ul>

        <div class="tab-content">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="all_job_type">
                <div id="all_job_type_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>班次代码</th>
                            <th>执行时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i += 1)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cronSchedule)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.paramsStr)
                                        </td>*@

                                    <td>
                                        @if (canDelete)
                                        {
                                        <a href="#" id="msg-@item.id" class="option-icon-warning" onclick="deletejob(@item.id)" title="删除">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script type="text/javascript">
        Layout.init();

        var TableWidth = $(window).width() - 300;

        if($.cookie('left_sidebar')=="true"){
            TableWidth  = $(window).width() - 110;
        }

        Layout.TransferTableToGrid(TableWidth, $(window).height() - 180, false, "all_job_type", "任务列表", "20", "all_job_type_grid_table");

        function deletejob(id){
            if(confirm("确认删除？")){
                $.post("/QuartzJob/Delete?id="+id,{id:id},function(data){
                    if(data.Success){
                        window.location.reload();
                    }else{
                        alert(data.Content);
                    }
                },'json');
            }
        }
    </script>
