<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HR</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/layout")
    @Scripts.Render("~/bundles/modernizr") 
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-plug-in")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/layout")
    @Scripts.Render("~/bundles/vue")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="main-nav">
        <div class="nav-top">
            <div class="nav-name">
                德晋人事管理系统
            </div>

            <div class="nav-right">
                <div class="nav-user">
                    <span> 欢迎您，Admin </span>
                    <i class="caret" style="border-top: 4px solid #ecf0f1;" ></i>
                    @*注销*@
                </div>
            </div>
        </div>
        <div class="main-content">
            <div class="nav-left">
                <dl>
                    <dt>
                        基础数据
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </dt>
                    <dd><a href="#">职位管理</a></dd>
                    <dd><a href="#">人员类别管理</a></dd>
                    <dd><a href="#">学历管理</a></dd>
                    <dd><a href="#">证照类管理</a></dd>
                    <dd><a href="#">保险类别管理</a></dd>
                    <dd><a href="#">离职原因管理</a></dd>
                    <dd><a href="#">缺勤类型管理</a></dd>
                    <dd><a href="#">加班类型管理</a></dd>
                </dl>

                <dl>
                    <dt>
                        用户管理
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </dt>
                    <dd><a href="#">权限管理</a></dd>
                    <dd>@Html.ActionLink("员工管理", "Index", "Staff")</dd>
                </dl>

                <dl class="nav-company">
                    <dt>
                        @Html.ActionLink("公司管理", "Index", "Company")
                    </dt>
                </dl>

                <dl>
                    <dt><a href="#">部门管理</a></dt>
                </dl>

                <dl>
                    <dt>
                        考勤管理
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </dt>
                    <dd><a href="/AttendanceRecordDetail">详细记录管理</a></dd>
                </dl>

                <dl>
                    <dt><a href="#">班次管理</a></dt>
                </dl>

            </div>
            <div class="nav-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(function(){
            $(".nav-left dd").hide();
            $(".nav-left dt").click(function () {
                $(this).parent().find('dd').slideToggle();
                if ($(this).find('i').hasClass('glyphicon-chevron-right')) {
                    $(this).find('i').removeClass('glyphicon-chevron-right');
                    $(this).find('i').addClass('glyphicon-chevron-down');
                } else {
                    $(this).find('i').removeClass('glyphicon-chevron-down');
                    $(this).find('i').addClass('glyphicon-chevron-right');
                }
            });
        })
    </script>
</body>
</html>
