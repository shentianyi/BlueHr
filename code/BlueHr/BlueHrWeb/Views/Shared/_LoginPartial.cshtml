@using Microsoft.AspNet.Identity
@using BlueHrLib.Data

<style>
    .header1 {
        margin-top: 30px;
        width: 100%;
        height: 24px;
        text-align: center;
        line-height: 30px;
        color: #2980b9;
        font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-size: 30px;
        font-weight: 800;
    }

    .div_input1 {
        position: relative;
        left: 150px;
        top: 80px;
    }

    .div_input2 {
        position: relative;
        left: 150px;
        top: 100px;
    }

    label {
        color: #2980b9;
        font-size: 18px;
    }

    input {
        width: 300px;
        height: 40px;
        border: 1px solid #2980b9;
        padding-left: 5px;
    }

    .btn {
        position: relative;
        left: 280px;
        top: 150px;
        width: 100px;
        height: 50px;
        line-height: 20px;
        text-align: center;
        color: #fff;
        font-size: 18px;
        background: #2980b9;
    }
    .login_div {
        width:600px; 
        height:400px;
        background:#f7f5f6; 
        position:absolute;
        left:500px;
        top:200px; 
        border-radius:4px 120px 4px 120px; 
        border:1px solid #808080;
        box-shadow:2px 2px 30px #ebe4e3;
    }
</style>

@if (Session["user"] != null)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-xs">
                <i class="fa fa-user"></i>

                @*当前用户*@

                @((Session["user"] as User).name)
                <i class="fa fa-sort-down"></i>
            </span>
        </a>
        <ul class="dropdown-menu" style="height:114px;">

            <li style="margin:0 0 0 20px">
                <a href="/User/UserMsg" style="color:#fff">
                    <i class="fa fa-user"></i>
                    <span style="color:#fff; font-weight:500;"> 个人信息 </span>
                </a>
            </li>

            <li style="margin:0 0 0 20px">
                <a href="/User/Log" style="color:#fff">
                    <i class="fa fa-file-text-o"></i>
                    <span style="color:#fff; font-weight:500;"> 登陆日志 </span>
                </a>
            </li>

            <li style="margin:0 0 0 20px">
                <a href="/User/changepwd?id=@((Session["user"] as User).id)" style="color:#fff">
                    <i class="fa fa-paste"></i>
                    <span style="color:#fff; font-weight:500;"> 修改密码 </span>
                </a>
            </li>

            <li style="margin: 10px 0 20px 40px;position:relative;top:-10px; ">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()

                    <a href="javascript:document.getElementById('logoutForm').submit()" style="color:#fff;">
                        <i class="fa fa-power-off"></i>
                        <span style="margin-left:10px; font-weight:500;"> 注销 </span>
                    </a>
                }
            </li>
        </ul>
    </li>
