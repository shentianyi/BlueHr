@model BlueHrLib.Data.Company

<div id="company" style="margin:20px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("公司管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    <input type="hidden" id="error_info" value="@ViewBag.ErrorMsg" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "post_return_action(data)"/*, OnBegin = "return validate_page_info()"*/ }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;background:#c0392b">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody">
                <div class="marco-igroup-primary">
                    <label for="name">公司名称</label>
                    @if (Model != null)
                    {
                        @Html.EditorFor(model => model.name)
                    }
                    else
                    {
                        <input type="text" name="name" placeholder="公司名称" />
                    }
                </div>

                <div class="marco-textarea">
                    <label for="address" style="padding:3px 10px; height: 35px; margin-bottom: -2px;">公司地址</label>
                    @if (Model != null)
                {
                        @Html.TextAreaFor(model => model.address)
                    }
                    else
                    {
                        <textarea name="address" placeholder="公司地址"></textarea>
                    }
                </div>

                <div class="marco-textarea">
                    <label for="remark" style="padding:3px 10px; height: 35px; margin-bottom: -2px;">公司备注</label>
                    @if (Model != null)
                {
                        @Html.TextAreaFor(model => model.remark)
                    }
                    else
                    {
                        <textarea name="remark" placeholder="公司备注"></textarea>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    console.log($("#error_info").val());
    
    if ($("#error_info").val() != "" && $("#error_info").val() != undefined) {
        Layout.popMsg("popMsg-danger", $("#error_info").val());
    }
    function post_return_action(data) {
        console.log(data.Success);
        if (!data.Success) {
            Layout.popMsg('popMsg-danger', data.Content);
            return false;
        }
        else {
            window.close();
            //location.href = '/ExtraWorkRecord/Index';
        }
    };
</script>
