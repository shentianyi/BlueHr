@using MvcPaging
@model IPagedList<BlueHrLib.Data.ExtraWorkRecord>
@{
    ViewBag.Title = "加班管理";
}
@*@Styles.Render("~/Content/degreetype")*@
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>基础信息</li>
    <li>加班管理</li>
</ol>
<hr class="hr-grey" />
<div class="row" style="margin:0;">
    <form action="/ExtraWorkRecord/Search" method="get">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="marco-igroup-primary">
                <span>员工编号</span>
                <input type="text" name="staffNr" id="staffNr" placeholder="员工编号" value="@ViewBag.Query.staffNr" />
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
            <button type="submit" class="marco-btn-success">
                <i class="glyphicon glyphicon-search"></i>
                搜索
            </button>
        </div>
    </form>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="usual-table">
        <div class="table-heading">
            加班列表
            <div class="pull-right" style="margin-top:-12px;">
                <a href="/ExtraWorkRecord/Create">
                    <button class="marco-btn-primary">
                        <i class="glyphicon glyphicon-plus-sign"></i>
                        <span>创建</span>
                    </button>
                </a>
            </div>
        </div>
        <div class="table-body content_3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>员工号</th>
                        <th>加班类别</th>
                        <th>加班原因</th>
                        <th>加班时长(天)</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.staffNr)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExtraWorkType.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.otReason)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.duration)
                                </td>
                                
                                <td>
                                    <a href="/ExtraWorkRecord/Delete/@item.id" class="option-icon-primary" title="详情">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="/ExtraWorkRecord/Edit/@item.id" class="option-icon-warning" title="编辑">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center;">
        <div class="clearfix pagination">
            <div class="pagination-inner">
                @if (Model != null)
                {
                    if (ViewBag.Query != null)
                    {

                        var html = Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                            .Options(o => o.AddRouteValue("staffNr", ViewBag.Query.staffNr));
                        @html
                    }
                    else
                    {
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                    }
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    Layout.init();
</script>