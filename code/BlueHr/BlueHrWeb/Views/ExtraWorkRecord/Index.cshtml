    <script type="text/javascript">
        Layout.init();

        var TableWidth = $(window).width() - 300;

        if($.cookie('left_sidebar')=="true"){
            TableWidth  = $(window).width() - 110;
        }

        $(window).resize(function () {
            Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "all", "加班申请列表", "20", "all_grid_table");
            Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "already", "已审批列表", "20", "already_grid_table");
            Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "not", "未审批列表", "20", "not_grid_table");
                        
        })
        Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "not", "未审批列表", "20", "not_grid_table");
        $('#already').addClass("active");
        Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "already", "已审批列表", "20", "already_grid_table");
        $('#already').removeClass("active");

        $('#all').addClass("active");
        Layout.TransferTableToGrid(TableWidth, $(window).height() - 260, false, "all", "加班申请列表", "20", "all_grid_table");
        $('#all').removeClass("active");


        $('.datetimepicker').datetimepicker({
            format: 'Y-m-d',
            timepicker: false
        });

        $('.import-button-dialog').click(function () {
            $('#dialog_content').dialogModal({
                onOkBut: function () {
                },
                onCancelBut: function () { },
                onLoad: function () {
                    data_upload(".item-data-uploader");
                },
                onClose: function () {
                    window.location.reload();
                }
            });
        });

        //审核
        function shAbsenceRecord(id) {
            $('#approval_content').dialogModal({
                onOkBut: function () {
                    var approvalStatus = $(".dialogModal").find("#aplStatus").val();
                    var approvalRemarks = $(".dialogModal").find("#apvRemarks").val();

                    if (approvalStatus == null || approvalStatus == "") {
                        Layout.popMsg('popMsg-danger', "请选择审批状态！");
                        return;
                    }
                    else {
                        $.post("/ExtraWorkRecord/ApprovalExtraWorkRecord", { extralRecordId: id, approvalStatus: approvalStatus, approvalRemarks: approvalRemarks }, function (data) {

                            if (!data.Success) {
                                $('#approval_content').dialogModal("hide");
                                Layout.popMsg('popMsg-danger', data.Content);
                                return false;
                            }
                            else {
                                $('#approval_content').dialogModal("hide");
                                Layout.popMsg('popMsg-danger', data.Content);
                                window.location.reload();
                            }
                        });
                    }
                },
                onCancelBut: function () { },
                onLoad: function () {

                },
                onClose: function () {
                    //window.location.reload();
                }
            });
        }

        //批量审核
        function shBatchAbsenceRecord() {
            var items = get_items();
            if (items.length == 0) {
                alert("请选择需要审批项");
                return;
            }
            $("#thePkId").val(items);

            $('#approval_content').dialogModal({
                onOkBut: function () {
                },
                onCancelBut: function () { },
                onLoad: function () {

                },
                onClose: function () {
                    //window.location.reload();
                }
            });
        }
        
        function get_items() {
            var items = [];
            $.each($('.record-approve:checked'), function (i, item) {
                // console.log($(item).attr('id'));
                items.push($(item).attr('id'));
            });
            return items;
        }

        //弹出框
        $('.advanced-filter-btn').click(function () {
            $('#search_content').dialogModal({
                onOkBut: function () {
                },
                onCancelBut: function () { },
                onLoad: function () {
                },
                onClose: function () {
                }
            });
        });

        function addCondition(){
            if($(".itm .cln").length<5){
                $(".cln:last").after($('.cln:last').clone(true));
            }   
        }
        
        function deleteCondition(){
            if($(".itm .cln").length<=2){

            }else{
                $(".cln:last").remove();
            }
        }
    </script>
