@model BlueHrLib.Data.ShiftJobRecord
@using BlueHrWeb.Helpers.View
@{ 
    bool canDeleted = MenuAuthHelper.CanShow("ShiftJobRecord", "Deleted");
}

<input type="hidden" id="can" value="@canDeleted.ToString()">
<div id="shiftjobrecord" style="margin:20px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("员工调岗", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "Success" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}
                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody">
                <div class="row" style="margin:0;">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>工号</span>
                                @if (Model != null)
                                {
                                    <select name="staffNrSelect" id="staffNrSelect"></select>
                                    <input type="hidden" id="staffNr" name="staffNr" placeholder="员工号" value="@Model.staffNr"  />
                                    <!--@Html.EditorFor(model => model.staffNr)-->
                                }
                                else
                                {
                                    <select name="staffNrSelect" id="staffNrSelect"></select>
                                    <input type="hidden" id="staffNr" name="staffNr" placeholder="员工号" />
                                }
                                <!--@Html.EditorFor(model => model.staffNr)-->
                            </div>
                        </div>
                        @if (Model != null)
                        {
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>调岗前公司</span>
                                @Html.DropDownList("beforeCompanyId", ViewData["companyList"] as IEnumerable<SelectListItem>)
                            </div>
                        </div>
                        }
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>调岗后公司</span>
                                @Html.DropDownList("afterCompanyId", ViewData["companyList"] as IEnumerable<SelectListItem>)
                            </div>
                        </div>
                        @if (Model != null)
                        {
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>调岗前部门</span>
                                @Html.DropDownList("beforeDepartmentId", ViewData["departmentList"] as IEnumerable<SelectListItem>)
                            </div>
                        </div>
                        }
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>调岗后部门</span>
                                @Html.DropDownList("afterDepartmentId", ViewData["departmentList"] as IEnumerable<SelectListItem>)
                            </div>
                        </div>
                        @if (Model != null)
                        {
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>调岗前职位</span>
                                @Html.DropDownList("beforeJobId", ViewData["jobTitleList"] as IEnumerable<SelectListItem>)
                            </div>
                        </div>
                        }
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="marco-igroup-primary">
                                <span>调岗后职位</span>
                                @Html.DropDownList("afterJobId", ViewData["jobTitleList"] as IEnumerable<SelectListItem>)
                            </div>
                        </div>
                        @if (Model != null)
                        {
                            <div class="approval-prp">
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="marco-igroup-primary">
                                        <span>申请日期</span>
                                        @if (Model != null)
                                        {
                                            <input id="createdAt" name="createdAt" value="@Model.createdAt.ToString("yyyy-MM-dd")" class="date-picker" />
                                        }
                                        else
                                        {
                                            <input id="createdAt" name="createdAt" value="" class="date-picker" />
                                        }
                                        <!--@Html.EditorFor(model => model.createdAt, new { htmlAttributes = new { @class = "date-picker" } })-->
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="marco-igroup-primary">
                                        <span>申请人</span>
                                        @Html.EditorFor(model => model.userName)
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="marco-igroup-primary">
                                        <span>审批人</span>
                                        @Html.EditorFor(model => model.approvalUserName)
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="marco-igroup-primary">
                                        <span>审批状态</span>
                                        @Html.EditorFor(model => model.approvalStatus)
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                    <div class="marco-igroup-primary">
                                        <span>审批日期</span>
                                        @if (Model.approvalAt.HasValue)
                                        {
                                            <input id="approvalAt" name="approvalAt" value="@Model.approvalAt.Value.ToString("yyyy-MM-dd")" class="date-picker" />
                                        }
                                        else
                                        {
                                            <input id="approvalAt" name="approvalAt" value="" class="date-picker" />
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                </div>
                <div class="row" style="margin:0;">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="marco-textarea">
                            <span style="padding:3px 10px; height: 35px; margin-bottom: -2px;">申请备注</span>
                            @Html.TextAreaFor(model => model.remark)
                        </div>
                    </div>
                    @if (Model != null)
                    {
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 approval-prp">
                        <div class="marco-textarea">
                            <span style="padding:3px 10px; height: 35px; margin-bottom: -2px;">审批备注</span>
                            @Html.TextAreaFor(model => model.approvalRemark)
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    //Layout.datepicker('.datetimepicker');
    Layout.datepicker('.date-picker');

    Layout.SetTypeStaffNr(100, 'staffNrSelect', 'staffNr', true);

    //

    $("#afterCompanyId").change(function(){
        console.log($(this).val());
 
        Layout.CompanyAndDepartment('#afterCompanyId', '#afterDepartmentId');
    });
 
    Layout.CompanyAndDepartment('#afterCompanyId', '#afterDepartmentId');
    
</script>
