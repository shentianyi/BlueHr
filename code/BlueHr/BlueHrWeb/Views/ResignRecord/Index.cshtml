                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            @*<th></th>*@
                            <th>工号</th>
                            <th>离职类型</th>
                            <th>申请时间</th>
                            <th>申请人</th>
                            <th>生效时间</th>
                            <th>离职理由</th>
                            <th>审批人</th>
                            <th>审批时间</th>
                            <th>审批状态</th>
                            <th>审批备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.approvalStatus == null){
                                    <tr>
                                        <td>
                                            <a href="/Staff/Delete/@item.staffNr" class="option-icon-primary" title="员工详情">
                                                @Html.DisplayFor(modelItem => item.staffNr)
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.resignTypeDisplay)
                                        </td>

                                        <td>
                                            <!--值不可为空-->
                                            <span>@item.resignAt.ToString("yyyy-MM-dd")</span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem =>item.userName)
                                        </td>
                                        <td>
                                            <!--值可为空-->
                                            @(@item.resignEffectiveAt.HasValue ? @item.resignEffectiveAt.Value.ToString("yyyy-MM-dd") : "")
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.resignReason)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.resignChecker)
                                        </td>
                                        <td>
                                            <!--审批时间-->
                                            <span>
                                                @(@item.approvalAt.HasValue ? @item.approvalAt.Value.ToString("yyyy-MM-dd") : "")
                                            </span>
                                        </td>
                                        <td>未审批</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.approvalRemark)
                                        </td>

                                        <td>
                                            @if (canDelete)
                                            {
                                                <a href="/ResignRecord/Delete/@item.id" class="option-icon-primary" title="详情">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            }
                                            @if (canEdit)
                                            {
                                                <a href="/ResignRecord/Edit/@item.id" class="option-icon-warning" title="编辑">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            }
                                            @if (canApproval)
                                            {
                                                <a title="审批" id="shResignRecord" class="option-icon-danger" onclick="shResignRecord(@item.id)">
                                                    <i class="fa fa-check"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
