@model BlueHrLib.Data.ResignRecord

<div id="resignRecord" style="margin:10px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>@Html.ActionLink("离职管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    <input type="hidden" id="error_info" value="@ViewBag.ErrorMsg" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "post_return_action(data)"/*, OnBegin = "return validate_page_info()"*/ }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary submit-btn" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody row">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <label for="name">员工号</label>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.staffNr)
                        }
                        else
                        {
                            <input type="text" name="staffNr" placeholder="员工号" />
                        }
                    </div>
                </div>
              
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <label for="name">离职原因</label>
                        <select name="resignTypeId" id="resignTypeId"></select>
                        <input type="hidden" id="resignTypeName" name="resignTypeName" >
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <label for="name">申请时间</label>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.resignAt)
                        }
                        else
                        {
                            <input type="text" id="resignAt" name="resignAt" placeholder="申请时间" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <label for="name">离职生效日期</label>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.resignEffectiveAt)
                        }
                        else
                        {
                            <input type="text" id="resignEffectiveAt" name="resignEffectiveAt" placeholder="离职生效日期" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-textarea">
                        <label for="remark" style="padding:3px 10px; height: 35px; margin-bottom: -2px;">离职备注</label>
                        @if (Model != null)
                        {
                            @Html.TextAreaFor(model => model.resignReason)
                        }
                        else
                        {
                            <textarea id="resignReason" name="resignReason" placeholder="离职备注"></textarea>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    $(".submit-btn").click(function(){
        $("#resignTypeName").val($(".combo-input").val());
        if($("#resignTypeName").val()==""|| $("#resignTypeName").val()==null){
            Layout.popMsg("popMsg-danger", "离职原因不能为空");
            return false;
        }
    })


    //将离职类型填充进去
    $.ajax({
        url: '/ResignType/GetResignType',
        type: 'get',
        success: function (data) {
            for (var resignType =0; resignType < data.length; resignType++) {
                $("#resignTypeId").append("<option id="+ data[resignType].id +" value=" + data[resignType].name + "> " + data[resignType].name + "</option>");
            }

            $('#resignTypeId').comboSelect();
        },
        error: function () {
            console.log("Error!");
        }
    });

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    if ($("#error_info").val() != "" && $("#error_info").val() != undefined) {
        Layout.popMsg("popMsg-danger", $("#error_info").val());
    }

     //回调函数
    function post_return_action(data) {
        if (!data.Success) {
            Layout.popMsg('popMsg-danger', data.Content);
            return false;
        }
        else {
            window.close();
            //location.href = '/ExtraWorkRecord/Index';
        }
    }

</script>
