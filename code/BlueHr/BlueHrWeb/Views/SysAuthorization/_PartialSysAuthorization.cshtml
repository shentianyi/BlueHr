@model BlueHrLib.Data.SysAuthorization

<div id="sysauthorization" style="margin:20px;">
    <ol class="breadcrumb current-position">
        您的位置：
        <li>权限管理</li>  
        <li>@Html.ActionLink("权限管理", "Index")</li>
        <li>{{action}}</li>
    </ol>

    <hr class="hr-grey" />

    @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Post", OnSuccess = "post_return_action(data)"/*, OnBegin = "return validate_page_info()"*/ }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (Model != null)
        {
            @Html.HiddenFor(model => model.id)
        }

        <div class="marco-npanel-primary">
            <div class="marco-nheading">
                {{action}}

                <div class="pull-right">
                    <button type="submit" class="marco-btn-primary" style="margin-top:-10px; padding: 0 10px;">
                        <i class="fa fa-check-circle-o"></i>
                        <span>{{actionBtn}}</span>
                    </button>
                </div>
            </div>

            <div class="marco-nbody row">
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>模块</span>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.funCode)
                        }
                        else
                        {
                            <input type="text" name="funCode" placeholder="模块" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>控制器</span>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.controlName)
                        }
                        else
                        {
                            <input type="text" name="controlName" placeholder="控制器" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>动作</span>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.actionName)
                        }
                        else
                        {
                            <input type="text" name="actionName" placeholder="动作" />
                        }
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="marco-igroup-primary">
                        <span>名称</span>
                        @if (Model != null)
                        {
                            @Html.EditorFor(model => model.name)
                        }
                        else
                        {
                            <input type="text" name="name" placeholder="名称" />
                        }
                    </div>
                </div>
            </div>

            <div class="row" style="padding: 4px;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="marco-textarea">
                        <label for="remark" style="padding:3px 10px; height: 35px; margin-bottom: -2px;">备注</label>
                        @if (Model != null)
                        {
                            @Html.TextAreaFor(model => model.remarks)
                        }
                        else
                        {
                            <textarea name="remarks" placeholder="备注" style="margin-top: -5px;"></textarea>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    Layout.init();

    //控制textarea高度
    $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    $(window).resize(function () {
        $('textarea').css({ height: ($(window).height() - 400) / 2 + 'px' });
    });

    //Layout.datepicker('.datetimepicker');
    Layout.datepicker('.date-picker');
    Layout.timepicker('.time-picker');
    //回调函数
    function post_return_action(data) {

        if (!data.Success) {
            Layout.popMsg('popMsg-danger', data.Content);
            return false;
        }
        else {

            location.href = '/SysAuthorization/Index';
        }
    }
</script>
