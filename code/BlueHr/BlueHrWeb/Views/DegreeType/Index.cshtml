@using MvcPaging

@model IPagedList<BlueHrLib.Data.DegreeType>

@{
    ViewBag.Title = "学历管理";
}

@Styles.Render("~/Content/degreetype")

<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>基础信息</li>
    <li>学历管理</li>
</ol>

<hr class="hr-grey" />

<div class="row" style="margin:0;">
    <form action="/DegreeType/Search" method="get">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="marco-igroup-primary">
                <span>学历名称</span>
                <input type="text" name="Name" id="Name" placeholder="学历名称" value="@ViewBag.Query.Name" />
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
            <button type="submit" class="marco-btn-success">
                <i class="glyphicon glyphicon-search"></i>
                搜索
            </button>
        </div>
    </form>
</div>



<div style="margin:10px;">
    <div class="minitor-show marco-tabs-default">
        <button type="button" class="marco-btn-primary import-dialog-btn pull-right" style="margin-top: -5px; margin-right:15px;">
            <i class="fa fa-cloud-upload"></i>
            <span>上传</span>
        </button>

        <a href="/Staff/Create" class="pull-right" style="margin-top: -10px; margin-right:5px;">
            <button class="marco-btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i>
                <span>创建</span>
            </button>
        </a>

        <ul class="nav nav-tabs" role="tablist" style="width: 400px;">
            <li role="presentation" class="active"><a href="#degree" role="tab" data-toggle="tab">学历管理</a></li>            
        </ul>

        <div class="tab-content">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="all_degree_type">
                <div id="all_degree_type_grid_table"></div>
                <table class="table table-bordered" style="display:none;">
                    <thead>
                        <tr>
                            <th>学历名称</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.remark)
                                    </td>
                                    <td>
                                        <a href="/DegreeType/Delete/@item.id" target="_blank" class="option-icon-primary" title="详情">
                                            <i class="fa fa-eye"></i>
                                        </a>

                                        <a href="/DegreeType/Edit/@item.id" target="_blank" class="option-icon-warning" title="编辑">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>


@Scripts.Render("~/bundles/degreetype")

<script type="text/javascript">
    Layout.init();
    Layout.TransferTableToGrid($(window).width() - 300, $(window).height() - 250, false, "all_degree_type", "学历管理", "20", "all_degree_type_grid_table");
</script>