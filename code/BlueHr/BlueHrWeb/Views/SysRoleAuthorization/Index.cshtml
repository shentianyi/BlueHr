@using MvcPaging
@model IPagedList<BlueHrLib.Data.SysAuthorization>
@{
    ViewBag.Title = "角色权限";
}
<ol class="breadcrumb current-position" style="margin-top:10px;">
    您的位置：
    <li>权限管理</li>
    <li>角色权限</li>
</ol>
<hr class="hr-grey" />


<div class="row" style="margin:0;">
    <form action="/SysRoleAuthorization/Search" method="get">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="marco-igroup-primary">
                <span>角色名称</span>
                @Html.DropDownList("RoleName", ViewData["SysRoleList"] as IEnumerable<SelectListItem>)
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="marco-igroup-primary">
                <span>权限模块</span>
                <input type="text" name="AuthName" id="AuthName" placeholder="权限模块" value="@ViewBag.Query.AuthName" />
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6" style="margin-top:5px;">
            <button type="submit" class="marco-btn-success">
                <i class="glyphicon glyphicon-search"></i>
                搜索
            </button>
        </div>
    </form>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="usual-table">
        <div class="table-heading">
            权限列表
            <div class="pull-right" style="margin-top:-12px;">

                <button class="marco-btn-primary" id="btnSaveAuth">
                    <i class="glyphicon glyphicon-plus-sign"></i>
                    <span>保存权限</span>
                </button>

            </div>
        </div>
        <div class="table-body content_3">
            <table class="table table-bordered" id="theTableList">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="ckbox_all" onclick="checkboxOnAllclick(this)" /></th>
                        <th>模块</th>
                        <th>控制器</th>
                        <th>动作</th>
                        <th>名称</th>
                        <th>备注</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        bool isExist = ViewBag.TheAuthList.Contains(item.id.ToString());
                                        if (isExist)
                                        {
                                            <input type="checkbox" id="ckbox_@item.id" onclick="checkboxOnclick(this,@item.id)" value="@item.id" checked="checked" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" id="ckbox_@item.id" onclick="checkboxOnclick(this,@item.id)" value="@item.id" />
                                        }
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.funCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.controlName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.actionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.remarks)
                                </td>
                            </tr>
                                            }
                                        }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center;">
        <div class="clearfix pagination">
            <div class="pagination-inner">
                @if (Model != null)
                {
                    if (ViewBag.Query != null)
                    {
                        var html = Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                       .Options(o => o.AddRouteValue("AuthName", ViewBag.Query.AuthName))
                       .Options(o => o.AddRouteValue("RoleName", ViewBag.Query.RoleName));
                        @html
                    }
                    else
                    {
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                    }
                }
            </div>
        </div>
    </div>
    <div hidden="hidden">
        <input id="theAuthList" value="@ViewBag.TheRoleAuthList" />
    </div>
</div>

<script type="text/javascript">
    Layout.init();

    function checkboxOnclick(checkbox, id) {

        var theAuths = $("#theAuthList").val();

        if (checkbox.checked == true) {
            theAuths += id + ",";
        } else {
            theAuths = theAuths.replace(id + ",", "");
        }

        $("#theAuthList").val(theAuths.replace("on,", ""));

        console.log($("#theAuthList").val());
    }

    function checkboxOnAllclick(checkbox) {
        $("#theTableList input[type='checkbox']").prop('checked', $(checkbox).prop('checked'));

        var allAuthList = $("#theAuthList").val();

        var str = "";
        if (checkbox.checked == true) {
            $("#theTableList input[type='checkbox']").each(function () {
                str += $(this).val() + ",";

                if (allAuthList.indexOf($(this) <= -1)) {
                    allAuthList += $(this).val() + ",";
                }
            });
        }
        else {
            allAuthList = "";
        }

        $("#theAuthList").val(allAuthList.replace("on,", ""));
        console.log($("#theAuthList").val());
    }

    $("#btnSaveAuth").click(function (data) {
        $.post("/SysRoleAuthorization/AddOrUpdateRoleAuths", { roleId: $("#RoleName").val(), authList: $("#theAuthList").val() }, function (data) {

            if (!data.Success) {
                Layout.popMsg('popMsg-danger', data.Content);
                return false;
            }
            else {
                Layout.popMsg('popMsg-danger', data.Content);
                window.location.reload();
            }
        });
    });
</script>